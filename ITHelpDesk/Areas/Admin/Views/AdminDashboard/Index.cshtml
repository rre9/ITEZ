@model AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Panel - Dashboard";
}

<div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3 mb-4">
    <div>
        <h1 class="display-6 fw-semibold text-primary mb-1">
            <i class="fa-solid fa-users-gear me-2"></i>Admin Panel
        </h1>
        <p class="text-secondary mb-0">User management dashboard. This panel is separate from the legacy Admin role.</p>
    </div>
    <div>
        <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-user-plus me-2"></i>Create New User
        </a>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-secondary text-uppercase small fw-semibold mb-1">Total Users</h6>
                        <h2 class="mb-0 fw-bold text-primary">@Model.TotalUsers</h2>
                    </div>
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                        <i class="fa-solid fa-users fa-2x text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-secondary text-uppercase small fw-semibold mb-1">Active Users</h6>
                        <h2 class="mb-0 fw-bold text-success">@Model.ActiveUsers</h2>
                    </div>
                    <div class="bg-success bg-opacity-10 rounded-circle p-3">
                        <i class="fa-solid fa-user-check fa-2x text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-secondary text-uppercase small fw-semibold mb-1">Disabled Users</h6>
                        <h2 class="mb-0 fw-bold text-danger">@Model.DisabledUsers</h2>
                    </div>
                    <div class="bg-danger bg-opacity-10 rounded-circle p-3">
                        <i class="fa-solid fa-user-slash fa-2x text-danger"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Users Table -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-bottom">
        <h5 class="mb-0 fw-semibold">
            <i class="fa-solid fa-list me-2"></i>All Users
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Email Confirmed</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Users.Any())
                    {
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>
                                    <strong>@user.FullName</strong>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge bg-secondary">@user.Role</span>
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fa-solid fa-check-circle me-1"></i>Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fa-solid fa-times-circle me-1"></i>Disabled
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (user.EmailConfirmed)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fa-solid fa-check me-1"></i>Confirmed
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fa-solid fa-clock me-1"></i>Pending
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="fa-solid fa-inbox fa-2x mb-2 d-block"></i>
                                No users found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-outline-primary">
        <i class="fa-solid fa-users me-2"></i>Manage Users
    </a>
</div>

