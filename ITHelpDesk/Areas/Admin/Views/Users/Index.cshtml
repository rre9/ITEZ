@model List<UserListViewModel>

@{
    ViewData["Title"] = "Admin Panel - Users";
}

<div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3 mb-4">
    <div>
        <h1 class="display-6 fw-semibold text-primary mb-1">
            <i class="fa-solid fa-users me-2"></i>User Management
        </h1>
        <p class="text-secondary mb-0">Manage system users. This panel is separate from workflow and ticket management.</p>
    </div>
    <div>
        <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-user-plus me-2"></i>Create New User
        </a>
        <a asp-area="Admin" asp-controller="AdminDashboard" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fa-solid fa-chart-line me-2"></i>Dashboard
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-bottom">
        <h5 class="mb-0 fw-semibold">
            <i class="fa-solid fa-list me-2"></i>All Users (@Model.Count)
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Email Confirmed</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@user.FullName</strong>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge bg-secondary">@user.Role</span>
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fa-solid fa-check-circle me-1"></i>Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fa-solid fa-times-circle me-1"></i>Disabled
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (user.EmailConfirmed)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fa-solid fa-check me-1"></i>Confirmed
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fa-solid fa-clock me-1"></i>Pending
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="fa-solid fa-inbox fa-2x mb-2 d-block"></i>
                                No users found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

