@page
@model LoginModel
@{
    ViewData["Title"] = Localizer["SignIn"];
}

<div class="row justify-content-center">
    <div class="col-12 col-lg-8 col-xl-5">
        <div class="card border-0 shadow-sm mt-5">
            <div class="card-body p-4 p-lg-5">
                <div class="text-center mb-4">
                    <h1 class="h3 fw-semibold text-primary mb-1"><i class="fa-solid fa-right-to-bracket me-2"></i>@Localizer["WelcomeBack"]</h1>
                    <p class="text-secondary mb-0">@Localizer["SignInWithAccount"]</p>
                </div>

                <form method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label fw-semibold"></label>
                        <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label fw-semibold"></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label class="form-check-label" asp-for="Input.RememberMe">@Localizer["RememberMe"]</label>
                        </div>
                        <a asp-page="./ForgotPassword" class="small text-primary text-decoration-none">@Localizer["ForgotPassword"]</a>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2">@Localizer["SignIn"]</button>
                </form>

                <div class="text-center mt-4">
                    <span class="text-secondary">@Localizer["NeedAnAccount"]</span>
                    <a asp-page="./Register" class="text-primary text-decoration-none fw-semibold">@Localizer["RegisterHere"]</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

