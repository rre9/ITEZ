        // Form Validation Script
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form[asp-action="CreateComputer"]');
            const submitBtn = form.querySelector('button[type="submit"]');

            // List of required fields
            const requiredFields = [
                'Name', 'ProductId', 'SerialNumber', 'VendorId', 'PurchaseCost', 
                'ExpiryDate', 'AcquisitionDate', 'WarrantyExpiryDate',
                'ComputerManufacturer', 'BiosDate', 'OSName', 'OSVersion',
                'RAM', 'VirtualMemory', 'ProcessorInfo', 'ProcessorManufacturer',
                'ClockSpeedMHz', 'CapacityGB', 'AssetStatus', 'Department',
                'IPAddress', 'MACAddress', 'DHCPEnabled'
            ];

            submitBtn.addEventListener('click', function(e) {
                let isValid = true;
                const errors = [];

                // Check all required fields
                requiredFields.forEach(fieldName => {
                    const field = form.querySelector(`[name="${fieldName}"]`);
                    if (!field) return;

                    const value = field.value ? field.value.trim() : '';
                    const errorSpan = document.getElementById(`${fieldName}-required`);

                    if (!value) {
                        isValid = false;
                        
                        // Add visual error state
                        field.classList.add('is-invalid-empty');
                        
                        // Show error message
                        if (errorSpan) {
                            errorSpan.classList.remove('submit-validation-hidden');
                        }
                        
                        errors.push(field.parentElement.querySelector('label')?.textContent?.trim() || fieldName);
                    } else {
                        // Remove visual error state if field is now filled
                        field.classList.remove('is-invalid-empty');
                        if (errorSpan) {
                            errorSpan.classList.add('submit-validation-hidden');
                        }
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    // Scroll to first error
                    const firstError = form.querySelector('.is-invalid-empty');
                    if (firstError) {
                        firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        firstError.focus();
                    }
                    
                    alert('❌ Please fill in all required fields:\n\n' + errors.join('\n'));
                    return false;
                }
            });

            // Real-time validation on field change
            requiredFields.forEach(fieldName => {
                const field = form.querySelector(`[name="${fieldName}"]`);
                if (!field) return;

                field.addEventListener('change', function() {
                    const value = this.value ? this.value.trim() : '';
                    const errorSpan = document.getElementById(`${fieldName}-required`);

                    if (value) {
                        this.classList.remove('is-invalid-empty');
                        if (errorSpan) {
                            errorSpan.classList.add('submit-validation-hidden');
                        }
                    } else {
                        this.classList.add('is-invalid-empty');
                        if (errorSpan) {
                            errorSpan.classList.remove('submit-validation-hidden');
                        }
                    }
                });

                field.addEventListener('blur', function() {
                    const value = this.value ? this.value.trim() : '';
                    const errorSpan = document.getElementById(`${fieldName}-required`);

                    if (!value) {
                        this.classList.add('is-invalid-empty');
                        if (errorSpan) {
                            errorSpan.classList.remove('submit-validation-hidden');
                        }
                    }
                });
            });
        });
