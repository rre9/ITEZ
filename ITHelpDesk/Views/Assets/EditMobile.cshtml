                                <div class="row">

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">OS Name</label>
                                        <input type="text" name="OperatingSystemInfo.Name"
                                            value="@Model.OperatingSystemInfo?.Name" class="form-control"
