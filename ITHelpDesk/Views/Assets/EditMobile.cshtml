                                        <span class="form-error-message submit-validation-hidden"
                                            id="VendorId-required">This field is required</span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="PurchaseCost" class="form-label">
                                            Purchase Cost (SAR)
                                            <span class="field-required">*</span>
                                        </label>
