@model List<AccessPoint>
@using ITHelpDesk.Models.Assets
@{
    ViewData["Title"] = "Access Points";
}

<div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3 mb-4">
    <div>
        <h1 class="display-6 fw-semibold text-primary mb-1">
            <i class="fa-solid fa-wifi me-2"></i>Access Points
        </h1>
        <p class="text-secondary mb-0">Manage and monitor wireless access points in your network.</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="CreateAccessPoint" class="btn btn-primary btn-lg shadow-sm">
            <i class="fa-solid fa-plus me-2"></i>Add Access Point
        </a>
    </div>
</div>

<style>
    .edit-mode-active {
        display: none;
    }
    
    body.edit-mode .edit-mode-active {
        display: table-cell;
    }
    
    body.edit-mode .edit-mode-hidden {
        display: none;
    }
    
    .item-checkbox,
    #selectAll {
        cursor: pointer;
    }
</style>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Product</th>
                        <th scope="col">Serial Number</th>
                        <th scope="col">Asset Tag</th>
                        <th scope="col">Vendor</th>
                        <th scope="col">Status</th>
                        <th scope="col">IP Address</th>
                        <th scope="col">MAC Address</th>
                        <th scope="col">NIC</th>
                        <th scope="col">Network</th>
                        <th scope="col">DHCP</th>
                        <th scope="col">DNS Hostname</th>
                        <th scope="col">Location</th>
                        <th scope="col">Purchase Cost</th>
                        <th scope="col" class="text-nowrap">Created At</th>
                        <th scope="col" class="text-nowrap text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="16" class="py-5 text-center text-secondary">
                                <i class="fa-solid fa-wifi fa-3x mb-3 text-muted"></i>
                                <div class="fw-semibold">No Access Points Found</div>
                                <p class="mb-3">Get started by adding your first access point to manage your network
                                    devices.</p>
                                <a asp-action="CreateAccessPoint" class="btn btn-outline-primary">
                                    <i class="fa-solid fa-plus me-2"></i>Add Access Point
                                </a>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold text-secondary">@item.Name</td>
                                <td>
                                    @if (item.Product != null)
                                    {
                                        <span class="fw-semibold">@item.Product.ProductName</span>
                                        @if (!string.IsNullOrEmpty(item.Product.Manufacturer))
                                        {
                                            <div class="text-muted small">@item.Product.Manufacturer</div>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.SerialNumber))
                                    {
                                        <span class="text-secondary">@item.SerialNumber</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.AssetTag))
                                    {
                                        <span class="badge bg-light text-dark border">@item.AssetTag</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Vendor != null)
                                    {
                                        @item.Vendor.VendorName
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    @if (item.AssetState != null)
                                    {
                                        var statusBadge = item.AssetState.Status switch
                                        {
                                            AssetStatusEnum.InStore => "bg-info text-dark",
                                            AssetStatusEnum.InUse => "bg-success",
                                            AssetStatusEnum.InRepair => "bg-warning text-dark",
                                            AssetStatusEnum.Expired => "bg-danger",
                                            AssetStatusEnum.Disposed => "bg-secondary",
                                            _ => "bg-light text-dark"
                                        };
                                        var statusText = item.AssetState.Status switch
                                        {
                                            AssetStatusEnum.InStore => "In Store",
                                            AssetStatusEnum.InUse => "In Use",
                                            AssetStatusEnum.InRepair => "In Repair",
                                            AssetStatusEnum.Expired => "Expired",
                                            AssetStatusEnum.Disposed => "Disposed",
                                            _ => "Unknown"
                                        };
                                        <span class="badge rounded-pill @statusBadge">@statusText</span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-light text-dark">Unknown</span>
                                    }
                                </td>
                                <td>
                                    @if (item.NetworkDetails != null && !string.IsNullOrEmpty(item.NetworkDetails.IPAddress))
                                    {
                                        <span>@item.NetworkDetails.IPAddress</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    @if (item.NetworkDetails != null && !string.IsNullOrEmpty(item.NetworkDetails.MACAddress))
                                    {
                                        <span class="text-muted small">@item.NetworkDetails.MACAddress</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    @if (item.NetworkDetails != null && !string.IsNullOrEmpty(item.NetworkDetails.NIC))
                                    {
                                        <span>@item.NetworkDetails.NIC</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    @if (item.NetworkDetails != null && !string.IsNullOrEmpty(item.NetworkDetails.Network))
                                    {
                                        <span>@item.NetworkDetails.Network</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    @if (item.NetworkDetails != null)
                                    {
                                        <span class="badge @(item.NetworkDetails.DHCPEnabled ? "bg-success" : "bg-secondary")">
                                            @(item.NetworkDetails.DHCPEnabled ? "Enabled" : "Disabled")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    @if (item.NetworkDetails != null && !string.IsNullOrEmpty(item.NetworkDetails.DNSHostname))
                                    {
                                        <span>@item.NetworkDetails.DNSHostname</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Location))
                                    {
                                        <span>@item.Location</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td class="text-nowrap">
                                    @if (item.PurchaseCost > 0)
                                    {
                                        <span>@item.PurchaseCost.ToString("N2") SAR</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td class="text-nowrap">@item.CreatedAt.ToLocalTime():g</td>
                                <td class="text-nowrap text-end">
                                    <a class="btn btn-primary btn-sm me-2" asp-action="EditAccessPoint"
                                        asp-route-id="@item.Id">
                                        <i class="fa-solid fa-edit me-1"></i>Edit
                                    </a>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Support") || User.IsInRole("IT"))
                                    {
                                        <button type="button" class="btn btn-outline-danger btn-sm"
                                            onclick="confirmDelete(@item.Id, '@item.Name')">
                                            <i class="fa-solid fa-trash me-1"></i>Delete
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<form id="deleteForm" method="post" asp-action="DeleteAccessPoint" style="display: none;">
    <input type="hidden" id="deleteId" name="id" />
</form>

@section Scripts {
    <script>
        let isEditMode = false;

        function toggleEditMode() {
            isEditMode = !isEditMode;
            document.body.classList.toggle('edit-mode', isEditMode);
            
            const editBtn = document.getElementById('editBtnText');
            if (isEditMode) {
                editBtn.textContent = 'Done';
            } else {
                editBtn.textContent = 'Edit';
                // Uncheck all checkboxes when exiting edit mode
                document.querySelectorAll('.item-checkbox').forEach(cb => cb.checked = false);
                document.getElementById('selectAll').checked = false;
            }
        }

        function toggleSelectAll(checkbox) {
            document.querySelectorAll('.item-checkbox').forEach(cb => {
                cb.checked = checkbox.checked;
            });
        }

        function confirmDelete(id, name) {
            if (confirm(`Are you sure you want to delete "${name}"?\n\nThis action cannot be undone.`)) {
                document.getElementById('deleteId').value = id;
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}