@model List<ITHelpDesk.Models.Assets.AccessPoint>
@using ITHelpDesk.Models.Assets
@{
    ViewData["Title"] = "Access Points";
}

@section Styles {
    <link rel="stylesheet" href="~/css/assets.css" />
}

<div class="computers-header mb-4">
    <div class="container-fluid px-0">
        <div class="row align-items-center">
            <div class="col-lg-8 mb-3 mb-lg-0">
                <div class="d-flex align-items-center">
                    <div class="icon-box me-3">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" fill="currentColor" width="32"
                            height="32">
                            <path
                                d="M54.2 202.9C123.2 136.7 216.8 96 320 96s196.8 40.7 265.8 106.9c12.8 12.2 33 11.8 45.2-.9s11.8-33-.9-45.2C549.7 79.5 440.4 32 320 32S90.3 79.5 9.8 156.7C-2.9 169-3.3 189.2 8.9 202s32.5 13.2 45.2 .9zM320 256c56.8 0 108.6 21.1 148.2 56c13.3 11.7 33.5 10.4 45.2-2.8s10.4-33.5-2.8-45.2C459.8 219.2 393 192 320 192s-139.8 27.2-190.5 72c-13.3 11.7-14.5 31.9-2.8 45.2s31.9 14.5 45.2 2.8c39.5-34.9 91.3-56 148.2-56zm64 160a64 64 0 1 0 -128 0 64 64 0 1 0 128 0z" />
                        </svg>
                    </div>
                    <div>
                        <h1 class="page-title mb-1">Access Points</h1>
                        <p class="page-subtitle mb-0">
                            <i class="fa-solid fa-chart-line me-2"></i>
                            Manage and monitor <span class="fw-bold text-primary">@Model.Count</span> access points in
                            your network
                        </p>
                    </div>
                </div>
            </div>


            <div class="col-lg-4 text-lg-end">
                <a asp-action="ExportAccessPointsToExcel" class="btn btn-excel me-2"
                    title="Export all access points to Excel file">
                    <i class="fa-solid fa-file-excel me-2"></i>
                    <span>Export to Excel</span>
                </a>
                <a asp-action="CreateAccessPoint" class="btn btn-primary btn-add-new">
                    <i class="fa-solid fa-plus-circle me-2"></i>Add New Access Point
                </a>
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" fill="currentColor" width="64" height="64">
                <path
                    d="M54.2 202.9C123.2 136.7 216.8 96 320 96s196.8 40.7 265.8 106.9c12.8 12.2 33 11.8 45.2-.9s11.8-33-.9-45.2C549.7 79.5 440.4 32 320 32S90.3 79.5 9.8 156.7C-2.9 169-3.3 189.2 8.9 202s32.5 13.2 45.2 .9zM320 256c56.8 0 108.6 21.1 148.2 56c13.3 11.7 33.5 10.4 45.2-2.8s10.4-33.5-2.8-45.2C459.8 219.2 393 192 320 192s-139.8 27.2-190.5 72c-13.3 11.7-14.5 31.9-2.8 45.2s31.9 14.5 45.2 2.8c39.5-34.9 91.3-56 148.2-56zm64 160a64 64 0 1 0 -128 0 64 64 0 1 0 128 0z" />
            </svg>
        </div>
        <h3 class="empty-state-title">No Access Points Found</h3>
        <p class="empty-state-text">Get started by adding your first access point to manage your network.</p>
        <a asp-action="CreateAccessPoint" class="btn btn-primary btn-lg mt-3">
            <i class="fa-solid fa-plus-circle me-2"></i>Add Your First Access Point
        </a>
    </div>
}
else
{
    <div class="computers-grid">
        @foreach (var item in Model)
        {
            <div class="computer-card">
                <div class="computer-card-header">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="computer-info">
                            <div class="computer-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" fill="currentColor" width="24"
                                    height="24">
                                    <path
                                        d="M54.2 202.9C123.2 136.7 216.8 96 320 96s196.8 40.7 265.8 106.9c12.8 12.2 33 11.8 45.2-.9s11.8-33-.9-45.2C549.7 79.5 440.4 32 320 32S90.3 79.5 9.8 156.7C-2.9 169-3.3 189.2 8.9 202s32.5 13.2 45.2 .9zM320 256c56.8 0 108.6 21.1 148.2 56c13.3 11.7 33.5 10.4 45.2-2.8s10.4-33.5-2.8-45.2C459.8 219.2 393 192 320 192s-139.8 27.2-190.5 72c-13.3 11.7-14.5 31.9-2.8 45.2s31.9 14.5 45.2 2.8c39.5-34.9 91.3-56 148.2-56zm64 160a64 64 0 1 0 -128 0 64 64 0 1 0 128 0z" />
                                </svg>
                            </div>
                            <div>
                                <h4 class="computer-name">@item.Name</h4>
                                @if (item.Product != null)
                                {
                                    <div class="computer-model">
                                        <i class="fa-solid fa-tag me-1"></i>
                                        @item.Product.ProductName
                                        @if (!string.IsNullOrEmpty(item.Product.Manufacturer))
                                        {
                                            <span class="text-muted">• @item.Product.Manufacturer</span>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                        @if (item.AssetState != null)
                        {
                            var statusClass = item.AssetState.Status.ToString().ToLower().Replace(" ", "-");
                            <span class="status-badge status-@statusClass">
                                @item.AssetState.Status
                            </span>
                        }
                    </div>
                </div>

                <div class="computer-card-body">
                    <div class="specs-grid">
                        <!-- Serial Number -->
                        <div class="spec-item">
                            <div class="spec-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" width="16"
                                    height="16">
                                    <path
                                        d="M24 32C10.7 32 0 42.7 0 56V456c0 13.3 10.7 24 24 24H40c13.3 0 24-10.7 24-24V56c0-13.3-10.7-24-24-24H24zm88 0c-8.8 0-16 7.2-16 16V464c0 8.8 7.2 16 16 16s16-7.2 16-16V48c0-8.8-7.2-16-16-16zm72 0c-13.3 0-24 10.7-24 24V456c0 13.3 10.7 24 24 24h16c13.3 0 24-10.7 24-24V56c0-13.3-10.7-24-24-24H184zm96 0c-13.3 0-24 10.7-24 24V456c0 13.3 10.7 24 24 24h16c13.3 0 24-10.7 24-24V56c0-13.3-10.7-24-24-24H280zM448 56V456c0 13.3 10.7 24 24 24h16c13.3 0 24-10.7 24-24V56c0-13.3-10.7-24-24-24H472c-13.3 0-24 10.7-24 24zm-64-8V464c0 8.8 7.2 16 16 16s16-7.2 16-16V48c0-8.8-7.2-16-16-16s-16 7.2-16 16z" />
                                </svg>
                            </div>
                            <div class="spec-content">
                                <div class="spec-label">Serial Number</div>
                                <div class="spec-value">
                                    <span class="badge-spec">@(item.SerialNumber ?? "—")</span>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(item.AssetTag))
                        {
                            <div class="spec-item">
                                <div class="spec-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" width="16"
                                        height="16">
                                        <path
                                            d="M0 80V229.5c0 17 6.7 33.3 18.7 45.3l176 176c25 25 65.5 25 90.5 0L418.7 317.3c25-25 25-65.5 0-90.5l-176-176c-12-12-28.3-18.7-45.3-18.7H48C21.5 32 0 53.5 0 80zm112 32a32 32 0 1 1 0 64 32 32 0 1 1 0-64z" />
                                    </svg>
                                </div>
                                <div class="spec-content">
                                    <div class="spec-label">Asset Tag</div>
                                    <div class="spec-value">
                                        <span class="badge-spec">@item.AssetTag</span>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Vendor -->
                        @if (item.Vendor != null)
                        {
                            <div class="spec-item">
                                <div class="spec-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" fill="currentColor" width="16"
                                        height="16">
                                        <path
                                            d="M36.8 192H603.2c20.3 0 36.8-16.5 36.8-36.8c0-7.3-2.2-14.4-6.2-20.4L558.2 21.4C549.3 8 534.4 0 518.3 0H121.7c-16 0-31 8-39.9 21.4L6.2 134.7c-4 6.1-6.2 13.2-6.2 20.4C0 175.5 16.5 192 36.8 192zM64 224V384v80c0 26.5 21.5 48 48 48H336c26.5 0 48-21.5 48-48V384 224H320V384H128V224H64zm448 0V480c0 17.7 14.3 32 32 32s32-14.3 32-32V224H512z" />
                                    </svg>
                                </div>
                                <div class="spec-content">
                                    <div class="spec-label">Vendor</div>
                                    <div class="spec-value">
                                        <span class="badge-spec">@item.Vendor.VendorName</span>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Purchase Cost -->
                        @if (item.PurchaseCost > 0)
                        {
                            <div class="spec-item">
                                <div class="spec-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" fill="currentColor" width="16"
                                        height="16">
                                        <path
                                            d="M160 0c17.7 0 32 14.3 32 32V67.7c1.6 .2 3.1 .4 4.7 .7c.4 .1 .7 .1 1.1 .2l48 8.8c17.4 3.2 28.9 19.9 25.7 37.2s-19.9 28.9-37.2 25.7l-47.5-8.7c-31.3-4.6-58.9-1.5-78.3 6.2s-27.2 18.3-29 28.1c-2 10.7-.5 16.7 1.2 20.4c1.8 3.9 5.5 8.3 12.8 13.2c16.3 10.7 41.3 17.7 73.7 26.3l2.9 .8c28.6 7.6 63.6 16.8 89.6 33.8c14.2 9.3 27.6 21.9 35.9 39.5c8.5 17.9 10.3 37.9 6.4 59.2c-6.9 38-33.1 63.4-65.6 76.7c-13.7 5.6-28.6 9.2-44.4 11V480c0 17.7-14.3 32-32 32s-32-14.3-32-32V445.1c-.4-.1-.9-.1-1.3-.2l-.2 0 0 0c-24.4-3.8-64.5-14.3-91.5-26.3c-16.1-7.2-23.4-26.1-16.2-42.2s26.1-23.4 42.2-16.2c20.9 9.3 55.3 18.5 75.2 21.6c31.9 4.7 58.2 2 76-5.3c16.9-6.9 24.6-16.9 26.8-28.9c1.9-10.6 .4-16.7-1.3-20.4c-1.9-4-5.6-8.4-13-13.3c-16.4-10.7-41.5-17.7-74-26.3l-2.8-.7 0 0C119.4 279.3 84.4 270 58.4 253c-14.2-9.3-27.5-22-35.8-39.6c-8.4-17.9-10.1-37.9-6.1-59.2C23.7 116 52.3 91.2 84.8 78.3c13.3-5.3 27.9-8.9 43.2-11V32c0-17.7 14.3-32 32-32z" />
                                    </svg>
                                </div>
                                <div class="spec-content">
                                    <div class="spec-label">Purchase Cost</div>
                                    <div class="spec-value">
                                        <span class="text-success fw-bold">@item.PurchaseCost.ToString("N2") SAR</span>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Expiry Date -->
                        @if (item.ExpiryDate.HasValue && item.ExpiryDate.Value.Year >= 1900 && item.ExpiryDate.Value.Year <=
                                        2077)
                        {
                            <div class="spec-item">
                                <div class="spec-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" width="16"
                                        height="16">
                                        <path
                                            d="M128 0c17.7 0 32 14.3 32 32V64H288V32c0-17.7 14.3-32 32-32s32 14.3 32 32V64h48c26.5 0 48 21.5 48 48v48H0V112C0 85.5 21.5 64 48 64H96V32c0-17.7 14.3-32 32-32zM0 192H448V464c0 26.5-21.5 48-48 48H48c-26.5 0-48-21.5-48-48V192zm64 80v32c0 8.8 7.2 16 16 16h32c8.8 0 16-7.2 16-16V272c0-8.8-7.2-16-16-16H80c-8.8 0-16 7.2-16 16zm128 0v32c0 8.8 7.2 16 16 16h32c8.8 0 16-7.2 16-16V272c0-8.8-7.2-16-16-16H208c-8.8 0-16 7.2-16 16zm144-16c-8.8 0-16 7.2-16 16v32c0 8.8 7.2 16 16 16h32c8.8 0 16-7.2 16-16V272c0-8.8-7.2-16-16-16H336zM64 400v32c0 8.8 7.2 16 16 16h32c8.8 0 16-7.2 16-16V400c0-8.8-7.2-16-16-16H80c-8.8 0-16 7.2-16 16zm144-16c-8.8 0-16 7.2-16 16v32c0 8.8 7.2 16 16 16h32c8.8 0 16-7.2 16-16V400c0-8.8-7.2-16-16-16H208zm112 16v32c0 8.8 7.2 16 16 16h32c8.8 0 16-7.2 16-16V400c0-8.8-7.2-16-16-16H336c-8.8 0-16 7.2-16 16z" />
                                    </svg>
                                </div>
                                <div class="spec-content">
                                    <div class="spec-label">Expiry Date</div>
                                    <div class="spec-value">
                                        <span class="badge-spec">@item.ExpiryDate.Value.ToString("MMM dd, yyyy")</span>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Location -->
                        @if (!string.IsNullOrEmpty(item.Location))
                        {
                            <div class="spec-item">
                                <div class="spec-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" fill="currentColor" width="16"
                                        height="16">
                                        <path
                                            d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z" />
                                    </svg>
                                </div>
                                <div class="spec-content">
                                    <div class="spec-label">Location</div>
                                    <div class="spec-value">
                                        <span class="badge-spec">@item.Location</span>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Acquisition Date -->
                        @if (item.AcquisitionDate.HasValue && item.AcquisitionDate.Value.Year >= 1900 &&
                                        item.AcquisitionDate.Value.Year <= 2077)
                        {
                            <div class="spec-item">
                                <div class="spec-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" width="16"
                                        height="16">
                                        <path
                                            d="M152 24c0-13.3-10.7-24-24-24s-24 10.7-24 24V64H64C28.7 64 0 92.7 0 128v16 48V448c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V192 144 128c0-35.3-28.7-64-64-64H344V24c0-13.3-10.7-24-24-24s-24 10.7-24 24V64H152V24zM48 192H400V448c0 8.8-7.2 16-16 16H64c-8.8 0-16-7.2-16-16V192z" />
                                    </svg>
                                </div>
                                <div class="spec-content">
                                    <div class="spec-label">Acquisition Date</div>
                                    <div class="spec-value">
                                        <span class="badge-spec">@item.AcquisitionDate.Value.ToString("MMM dd, yyyy")</span>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Warranty Expiry Date -->
                        @if (item.WarrantyExpiryDate.HasValue && item.WarrantyExpiryDate.Value.Year >= 1900 &&
                                        item.WarrantyExpiryDate.Value.Year <= 2077)
                        {
                            <div class="spec-item">
                                <div class="spec-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" width="16"
                                        height="16">
                                        <path
                                            d="M256 0c4.6 0 9.2 1 13.4 2.9L457.7 82.8c22 9.3 38.4 31 38.3 57.2c-.5 99.2-41.3 280.7-213.6 363.2c-16.7 8-36.1 8-52.8 0C57.3 420.7 16.5 239.2 16 140c-.1-26.2 16.3-47.9 38.3-57.2L242.7 2.9C246.8 1 251.4 0 256 0zm0 66.8V444.8C394 378 431.1 230.1 432 141.4L256 66.8l0 0z" />
                                    </svg>
                                </div>
                                <div class="spec-content">
                                    <div class="spec-label">Warranty Expiry</div>
                                    <div class="spec-value">
                                        <span class="badge-spec">@item.WarrantyExpiryDate.Value.ToString("MMM dd, yyyy")</span>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Network Details -->
                        @if (item.NetworkDetails != null)
                        {
                            @if (!string.IsNullOrEmpty(item.NetworkDetails.IPAddress))
                            {
                                <div class="spec-item">
                                    <div class="spec-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" fill="currentColor" width="16"
                                            height="16">
                                            <path
                                                d="M256 64H384v64H256V64zM240 0c-26.5 0-48 21.5-48 48v96c0 26.5 21.5 48 48 48h48v32H32c-17.7 0-32 14.3-32 32s14.3 32 32 32h96v32H80c-26.5 0-48 21.5-48 48v96c0 26.5 21.5 48 48 48H240c26.5 0 48-21.5 48-48V368c0-26.5-21.5-48-48-48H192V288H448v32H400c-26.5 0-48 21.5-48 48v96c0 26.5 21.5 48 48 48H560c26.5 0 48-21.5 48-48V368c0-26.5-21.5-48-48-48H512V288h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H352V192h48c26.5 0 48-21.5 48-48V48c0-26.5-21.5-48-48-48H240zM96 448V384H224v64H96zm320-64H544v64H416V384z" />
                                        </svg>
                                    </div>
                                    <div class="spec-content">
                                        <div class="spec-label">IP Address</div>
                                        <div class="spec-value">
                                            <span class="badge-spec">@item.NetworkDetails.IPAddress</span>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.NetworkDetails.MACAddress))
                            {
                                <div class="spec-item">
                                    <div class="spec-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" width="16"
                                            height="16">
                                            <path
                                                d="M64 32C28.7 32 0 60.7 0 96v32H512V96c0-35.3-28.7-64-64-64H64zM0 192V416c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V384H512v32c0 17.7-14.3 32-32 32s-32-14.3-32-32V352c0-17.7 14.3-32 32-32s32 14.3 32 32v32h64V192H0zm144 96h32c8.8 0 16 7.2 16 16v64c0 8.8-7.2 16-16 16H144c-8.8 0-16-7.2-16-16V304c0-8.8 7.2-16 16-16zm-16-48c0-8.8 7.2-16 16-16h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H144c-8.8 0-16-7.2-16-16V240zm144 48h32c8.8 0 16 7.2 16 16v64c0 8.8-7.2 16-16 16H272c-8.8 0-16-7.2-16-16V304c0-8.8 7.2-16 16-16zm-16-48c0-8.8 7.2-16 16-16h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H272c-8.8 0-16-7.2-16-16V240z" />
                                        </svg>
                                    </div>
                                    <div class="spec-content">
                                        <div class="spec-label">MAC Address</div>
                                        <div class="spec-value">
                                            <span class="badge-spec">@item.NetworkDetails.MACAddress</span>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.NetworkDetails.NIC))
                            {
                                <div class="spec-item">
                                    <div class="spec-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" fill="currentColor" width="16"
                                            height="16">
                                            <path
                                                d="M64 32C28.7 32 0 60.7 0 96V416c0 35.3 28.7 64 64 64H512c35.3 0 64-28.7 64-64V96c0-35.3-28.7-64-64-64H64zM176 192a32 32 0 1 1 0 64 32 32 0 1 1 0-64zm128 32a32 32 0 1 1 64 0 32 32 0 1 1 -64 0zm128-32a32 32 0 1 1 0 64 32 32 0 1 1 0-64z" />
                                        </svg>
                                    </div>
                                    <div class="spec-content">
                                        <div class="spec-label">NIC</div>
                                        <div class="spec-value">
                                            <span class="badge-spec">@item.NetworkDetails.NIC</span>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.NetworkDetails.Network))
                            {
                                <div class="spec-item">
                                    <div class="spec-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" fill="currentColor" width="16"
                                            height="16">
                                            <path
                                                d="M54.2 202.9C123.2 136.7 216.8 96 320 96s196.8 40.7 265.8 106.9c12.8 12.2 33 11.8 45.2-.9s11.8-33-.9-45.2C549.7 79.5 440.4 32 320 32S90.3 79.5 9.8 156.7C-2.9 169-3.3 189.2 8.9 202s32.5 13.2 45.2 .9zM320 256c56.8 0 108.6 21.1 148.2 56c13.3 11.7 33.5 10.4 45.2-2.8s10.4-33.5-2.8-45.2C459.8 219.2 393 192 320 192s-139.8 27.2-190.5 72c-13.3 11.7-14.5 31.9-2.8 45.2s31.9 14.5 45.2 2.8c39.5-34.9 91.3-56 148.2-56zm64 160a64 64 0 1 0 -128 0 64 64 0 1 0 128 0z" />
                                        </svg>
                                    </div>
                                    <div class="spec-content">
                                        <div class="spec-label">Network</div>
                                        <div class="spec-value">
                                            <span class="badge-spec">@item.NetworkDetails.Network</span>
