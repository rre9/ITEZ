@model ITHelpDesk.ViewModels.Assets.PrinterCreateEditViewModel
@{
    ViewData["Title"] = "Add New Printer";
}

<style>
    .select-with-add {
        position: relative;
        display: flex;
        align-items: stretch;
    }

    .select-with-add .form-select {
        flex: 1;
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
        border-right: none;
        padding-right: 2.5rem;
        appearance: none;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23343a40' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m2 5 6 6 6-6'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 0.75rem center;
        background-size: 16px 12px;
    }

    .select-with-add .btn-add {
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
        padding: 0.5rem 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 45px;
        background: #f8f9fa;
        border: 1px solid #ced4da;
        color: #495057;
        transition: all 0.2s ease;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .select-with-add .btn-add:hover {
        background: #0066cc;
        border-color: #0066cc;
        color: white;
    }

    .select-with-add .btn-add::before {
        content: '+';
        font-size: 1.3rem;
        font-weight: 600;
        line-height: 1;
    }

    .select-with-add .btn-add:hover {
        background: #0066cc;
        border-color: #0066cc;
        color: white;
    }

    /* Required/Optional Field Indicators */
    .field-required {
        color: #dc3545;
        font-weight: 600;
    }

    .field-optional {
        color: #6c757d;
        font-size: 0.875rem;
        font-weight: 500;
    }

    /* Validation styling */
    .form-control.is-invalid-empty,
    .form-select.is-invalid-empty {
        border-color: #dc3545;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545' viewBox='0 0 12 12'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath fill='%23dc3545' d='M6.8 3.8H5.2V6h1.6V3.8Zm0 4.4H5.2V8h1.6v-1.8Z'/%3e%3c/svg%3e");
    }

    .form-control.is-invalid-empty:focus,
    .form-select.is-invalid-empty:focus {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
    }

    .form-error-message {
        display: block;
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        font-weight: 500;
    }

    .submit-validation-hidden {
        display: none;
    }
</style>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h5>Add New Printer</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreatePrinter" method="post">
                        <!-- Basic Information Section -->
                        <div class="card mb-3">
                            <div class="card-body">
                                <h6 class="text-sm mb-3 fw-bold">Basic Information</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="Name" class="form-label">
                                                Name
                                                <span class="field-required">*</span>
                                            </label>
                                            <input asp-for="Name" class="form-control" required data-required="true" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                            <span class="form-error-message submit-validation-hidden" id="Name-required">This field is required</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="ProductId" class="form-label">
                                                Product
                                                <span class="field-required">*</span>
                                            </label>
                                            <div class="select-with-add">
                                                <select asp-for="ProductId" class="form-select" required data-required="true">
                                                    <option value="">-- Select Product --</option>
                                                    @if (ViewBag.Products != null)
                                                    {
                                                        @foreach (var product in ViewBag.Products as List<ITHelpDesk.Models.Assets.Product>)
                                                        {
                                                            <option value="@product.Id">@product.ProductName - @product.Manufacturer</option>
                                                        }
                                                    }
                                                </select>
                                                <button type="button" class="btn btn-sm btn-primary btn-add" data-bs-toggle="modal" data-bs-target="#addProductModal"></button>
                                            </div>
                                            <span asp-validation-for="ProductId" class="text-danger"></span>
                                            <span class="form-error-message submit-validation-hidden" id="ProductId-required">This field is required</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Asset Details Section -->
                        <div class="card mb-3">
                            <div class="card-body">
                                <h6 class="text-sm mb-3 fw-bold">Asset Details</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="SerialNumber" class="form-label">
                                                Serial Number
                                                <span class="field-required">*</span>
                                            </label>
                                            <input asp-for="SerialNumber" class="form-control" required data-required="true" />
                                            <span asp-validation-for="SerialNumber" class="text-danger"></span>
                                            <span class="form-error-message submit-validation-hidden" id="SerialNumber-required">This field is required</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="AssetTag" class="form-label">
                                                Asset Tag
                                                <span class="field-optional">(Optional)</span>
                                            </label>
                                            <input asp-for="AssetTag" class="form-control" />
                                            <span asp-validation-for="AssetTag" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="VendorId" class="form-label">
                                                Vendor
                                                <span class="field-required">*</span>
                                            </label>
                                            <div class="select-with-add">
                                                <select asp-for="VendorId" class="form-select" required data-required="true">
                                                    <option value="">-- Select Vendor --</option>
                                                    @if (ViewBag.Vendors != null)
                                                    {
                                                        @foreach (var vendor in ViewBag.Vendors as List<ITHelpDesk.Models.Assets.Vendor>)
                                                        {
                                                            <option value="@vendor.Id">@vendor.VendorName</option>
                                                        }
                                                    }
                                                </select>
                                                <button type="button" class="btn btn-sm btn-primary btn-add" data-bs-toggle="modal" data-bs-target="#addVendorModal"></button>
                                            </div>
                                            <span asp-validation-for="VendorId" class="text-danger"></span>
                                            <span class="form-error-message submit-validation-hidden" id="VendorId-required">This field is required</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="PurchaseCost" class="form-label">
                                                Purchase Cost (SAR)
                                                <span class="field-required">*</span>
                                            </label>
                                            <input asp-for="PurchaseCost" class="form-control" type="number" step="0.01" required data-required="true" />
                                            <span asp-validation-for="PurchaseCost" class="text-danger"></span>
                                            <span class="form-error-message submit-validation-hidden" id="PurchaseCost-required">This field is required</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="AcquisitionDate" class="form-label">
                                                Acquisition Date
                                                <span class="field-required">*</span>
                                            </label>
                                            <input asp-for="AcquisitionDate" class="form-control" type="date" required data-required="true" />
                                            <span asp-validation-for="AcquisitionDate" class="text-danger"></span>
                                            <span class="form-error-message submit-validation-hidden" id="AcquisitionDate-required">This field is required</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="WarrantyExpiryDate" class="form-label">
                                                Warranty Expiry Date
                                                <span class="field-required">*</span>
                                            </label>
                                            <input asp-for="WarrantyExpiryDate" class="form-control" type="date" required data-required="true" />
                                            <span asp-validation-for="WarrantyExpiryDate" class="text-danger"></span>
                                            <span class="form-error-message submit-validation-hidden" id="WarrantyExpiryDate-required">This field is required</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="ExpiryDate" class="form-label">
                                                Expiry Date
                                                <span class="field-required">*</span>
                                            </label>
                                            <input asp-for="ExpiryDate" class="form-control" type="date" required data-required="true" />
                                            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                                            <span class="form-error-message submit-validation-hidden" id="ExpiryDate-required">This field is required</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="Location" class="form-label">
                                                Location
                                                <span class="field-optional">(Optional)</span>
                                            </label>
                                            <input asp-for="Location" class="form-control" />
                                            <span asp-validation-for="Location" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Asset State Section -->
                        <div class="card mb-3">
                            <div class="card-body">
                                <h6 class="text-sm mb-3 fw-bold">Asset State</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="AssetStatus" class="form-label">
                                                Asset Status
                                                <span class="field-required">*</span>
                                            </label>
                                            <select asp-for="AssetStatus" class="form-select" required data-required="true">
                                                <option value="">-- Select Status --</option>
                                                <option value="1">In Store</option>
                                                <option value="2">In Use</option>
                                                <option value="3">In Repair</option>
                                                <option value="4">Expired</option>
                                                <option value="5">Disposed</option>
                                            </select>
                                            <span asp-validation-for="AssetStatus" class="text-danger"></span>
                                            <span class="form-error-message submit-validation-hidden" id="AssetStatus-required">This field is required</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="AssociatedTo" class="form-label">
                                                Associated To
                                                <span class="field-optional">(Optional)</span>
                                            </label>
                                            <input asp-for="AssociatedTo" class="form-control" />
                                            <span asp-validation-for="AssociatedTo" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="Site" class="form-label">
                                                Site
                                                <span class="field-optional">(Optional)</span>
                                            </label>
                                            <input asp-for="Site" class="form-control" />
                                            <span asp-validation-for="Site" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="StateComments" class="form-label">
                                                State Comments
                                                <span class="field-optional">(Optional)</span>
                                            </label>
                                            <textarea asp-for="StateComments" class="form-control" rows="2"></textarea>
                                            <span asp-validation-for="StateComments" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="UserId" class="form-label">
                                                User ID
                                                <span class="field-optional">(Optional)</span>
                                            </label>
                                            <input asp-for="UserId" class="form-control" />
                                            <span asp-validation-for="UserId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="Department" class="form-label">
                                                Department
                                                <span class="field-required">*</span>
                                            </label>
                                            <input asp-for="Department" class="form-control" required data-required="true" />
                                            <span asp-validation-for="Department" class="text-danger"></span>
                                            <span class="form-error-message submit-validation-hidden" id="Department-required">This field is required</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Network Details Section -->
                        <div class="card mb-3">
                            <div class="card-body">
                                <h6 class="text-sm mb-3 fw-bold">Network Details</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="IPAddress" class="form-label">
                                                IP Address
                                                <span class="field-required">*</span>
                                            </label>
                                            <input asp-for="IPAddress" class="form-control" required data-required="true" />
                                            <span asp-validation-for="IPAddress" class="text-danger"></span>
                                            <span class="form-error-message submit-validation-hidden" id="IPAddress-required">This field is required</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="MACAddress" class="form-label">
                                                MAC Address
                                                <span class="field-required">*</span>
                                            </label>
                                            <input asp-for="MACAddress" class="form-control" required data-required="true" />
                                            <span asp-validation-for="MACAddress" class="text-danger"></span>
                                            <span class="form-error-message submit-validation-hidden" id="MACAddress-required">This field is required</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="NIC" class="form-label">
                                                NIC
                                                <span class="field-optional">(Optional)</span>
                                            </label>
                                            <input asp-for="NIC" class="form-control" />
                                            <span asp-validation-for="NIC" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="Network" class="form-label">
                                                Network
                                                <span class="field-optional">(Optional)</span>
                                            </label>
                                            <input asp-for="Network" class="form-control" />
                                            <span asp-validation-for="Network" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="DefaultGateway" class="form-label">
                                                Default Gateway
                                                <span class="field-optional">(Optional)</span>
                                            </label>
                                            <input asp-for="DefaultGateway" class="form-control" />
                                            <span asp-validation-for="DefaultGateway" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="DHCPEnabled" class="form-label">
                                                DHCP Enabled
                                                <span class="field-required">*</span>
                                            </label>
                                            <select asp-for="DHCPEnabled" class="form-select" required data-required="true">
                                                <option value="">-- Select --</option>
                                                <option value="true">True</option>
                                                <option value="false">False</option>
                                            </select>
                                            <span asp-validation-for="DHCPEnabled" class="text-danger"></span>
                                            <span class="form-error-message submit-validation-hidden" id="DHCPEnabled-required">This field is required</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="DHCPServer" class="form-label">
                                                DHCP Server
                                                <span class="field-optional">(Optional)</span>
                                            </label>
                                            <input asp-for="DHCPServer" class="form-control" />
                                            <span asp-validation-for="DHCPServer" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label asp-for="DNSHostname" class="form-label">
                                                DNS Hostname
                                                <span class="field-optional">(Optional)</span>
                                            </label>
                                            <input asp-for="DNSHostname" class="form-control" />
                                            <span asp-validation-for="DNSHostname" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Printers" class="btn btn-secondary">
                                        <i class="fa-solid fa-times me-1"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa-solid fa-save me-1"></i>Create Printer
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Product Modal -->
<div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addProductModalLabel">Add New Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addProductForm">
                    <div class="mb-3">
                        <label for="productType" class="form-label">Product Type <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="productType" value="Printer" required>
                    </div>
                    <div class="mb-3">
                        <label for="productName" class="form-label">Product Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="productName" required>
                    </div>
                    <div class="mb-3">
                        <label for="manufacturer" class="form-label">Manufacturer <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="manufacturer" required>
                    </div>
                    <div class="mb-3">
                        <label for="partNo" class="form-label">Part No.</label>
                        <input type="text" class="form-control" id="partNo">
                    </div>
                    <div class="mb-3">
                        <label for="cost" class="form-label">Cost (SAR)</label>
                        <input type="number" step="0.01" class="form-control" id="cost" value="0">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>
                    Cancel
                </button>
                <button type="button" class="btn btn-primary" onclick="saveProduct()">
                    <i class="fas fa-save me-1"></i>
                    Save
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Add Vendor Modal -->
