@model List<ITHelpDesk.Models.Assets.Server>
@using ITHelpDesk.Models.Assets
@{
    ViewData["Title"] = "Servers";
}

@section Styles {
    <link rel="stylesheet" href="~/css/assets.css" />
}

<div class="computers-header mb-4">
    <div class="container-fluid px-0">
        <div class="row align-items-center">
            <div class="col-lg-8 mb-3 mb-lg-0">
                <div class="d-flex align-items-center">
                    <div class="icon-box me-3">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" width="32"
                            height="32">
                            <path
                                d="M50.7 58.5L0 160H208V32H93.7C75.5 32 58.9 42.3 50.7 58.5zM240 160H448L397.3 58.5C389.1 42.3 372.5 32 354.3 32H240V160zm208 32H0V416c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V192zM64 296c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H88c-13.3 0-24-10.7-24-24zm0 96c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H88c-13.3 0-24-10.7-24-24zM256 296c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H280c-13.3 0-24-10.7-24-24zm0 96c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H280c-13.3 0-24-10.7-24-24z" />
                        </svg>
                    </div>
                    <div>
                        <h1 class="page-title mb-1">Servers</h1>
                        <p class="page-subtitle mb-0">
                            <i class="fa-solid fa-server me-2"></i>
                            Manage and monitor <span class="fw-bold text-primary">@Model.Count</span> servers in your
                            infrastructure
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a asp-action="ExportServersToExcel" class="btn btn-excel me-2"
                    title="Export all servers to Excel file">
                    <i class="fa-solid fa-file-excel me-2"></i>
                    <span>Export to Excel</span>
                </a>
                <a asp-action="CreateServer" class="btn btn-primary btn-add-new">
                    <i class="fa-solid fa-plus-circle me-2"></i>Add New Computer
                </a>
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" width="64" height="64">
                <path
                    d="M50.7 58.5L0 160H208V32H93.7C75.5 32 58.9 42.3 50.7 58.5zM240 160H448L397.3 58.5C389.1 42.3 372.5 32 354.3 32H240V160zm208 32H0V416c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V192zM64 296c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H88c-13.3 0-24-10.7-24-24zm0 96c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H88c-13.3 0-24-10.7-24-24zM256 296c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H280c-13.3 0-24-10.7-24-24zm0 96c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H280c-13.3 0-24-10.7-24-24z" />
            </svg>
        </div>
        <h3 class="empty-state-title">No Servers Found</h3>
        <p class="empty-state-text">Get started by adding your first server to manage your infrastructure.</p>
        <a asp-action="CreateServer" class="btn btn-primary btn-lg mt-3">
            <i class="fa-solid fa-plus-circle me-2"></i>Add Your First Server
        </a>
    </div>
}
else
{
    <div class="computers-grid">
        @foreach (var item in Model)
        {
            <div class="computer-card">
                <div class="computer-card-header">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="computer-info">
                            <div class="computer-icon server-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" width="24"
                                    height="24">
                                    <path
                                        d="M50.7 58.5L0 160H208V32H93.7C75.5 32 58.9 42.3 50.7 58.5zM240 160H448L397.3 58.5C389.1 42.3 372.5 32 354.3 32H240V160zm208 32H0V416c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V192zM64 296c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H88c-13.3 0-24-10.7-24-24zm0 96c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H88c-13.3 0-24-10.7-24-24zM256 296c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H280c-13.3 0-24-10.7-24-24zm0 96c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H280c-13.3 0-24-10.7-24-24z" />
                                </svg>
                            </div>
                            <div>
                                <h4 class="computer-name">@item.Name</h4>
                                @if (item.Product != null)
                                {
                                    <div class="computer-model">
                                        <i class="fa-solid fa-tag me-1"></i>
                                        @item.Product.ProductName
                                        @if (!string.IsNullOrEmpty(item.Product.Manufacturer))
                                        {
                                            <span class="text-muted">• @item.Product.Manufacturer</span>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="computer-actions">
                            @if (item.AssetState != null)
                            {
                                var statusClass = item.AssetState.Status switch
                                {
                                    AssetStatusEnum.InStore => "status-in-store",
                                    AssetStatusEnum.InUse => "status-in-use",
                                    AssetStatusEnum.InRepair => "status-in-repair",
                                    AssetStatusEnum.Expired => "status-expired",
                                    AssetStatusEnum.Disposed => "status-disposed",
                                    _ => "status-unknown"
                                };
                                var statusText = item.AssetState.Status switch
                                {
                                    AssetStatusEnum.InStore => "In Store",
                                    AssetStatusEnum.InUse => "In Use",
                                    AssetStatusEnum.InRepair => "In Repair",
                                    AssetStatusEnum.Expired => "Expired",
                                    AssetStatusEnum.Disposed => "Disposed",
                                    _ => "Unknown"
                                };
                                var statusIcon = item.AssetState.Status switch
                                {
                                    AssetStatusEnum.InStore => "fa-box",
                                    AssetStatusEnum.InUse => "fa-check-circle",
                                    AssetStatusEnum.InRepair => "fa-wrench",
                                    AssetStatusEnum.Expired => "fa-exclamation-triangle",
                                    AssetStatusEnum.Disposed => "fa-trash",
                                    _ => "fa-question-circle"
                                };
                                <span class="status-badge @statusClass">
                                    <i class="fa-solid @statusIcon me-1"></i>@statusText
                                </span>
                            }
                        </div>
                    </div>
                </div>

                <div class="computer-card-body">
                    <div class="specs-grid">
                        <!-- Basic Info -->
                        <div class="spec-item">
                            <div class="spec-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" width="16"
                                    height="16">
                                    <path
                                        d="M24 32C10.7 32 0 42.7 0 56V456c0 13.3 10.7 24 24 24H40c13.3 0 24-10.7 24-24V56c0-13.3-10.7-24-24-24H24zm88 0c-8.8 0-16 7.2-16 16V464c0 8.8 7.2 16 16 16s16-7.2 16-16V48c0-8.8-7.2-16-16-16zm72 0c-13.3 0-24 10.7-24 24V456c0 13.3 10.7 24 24 24h16c13.3 0 24-10.7 24-24V56c0-13.3-10.7-24-24-24H184zm96 0c-13.3 0-24 10.7-24 24V456c0 13.3 10.7 24 24 24h16c13.3 0 24-10.7 24-24V56c0-13.3-10.7-24-24-24H280zM448 56V456c0 13.3 10.7 24 24 24h16c13.3 0 24-10.7 24-24V56c0-13.3-10.7-24-24-24H472c-13.3 0-24 10.7-24 24zm-64-8V464c0 8.8 7.2 16 16 16s16-7.2 16-16V48c0-8.8-7.2-16-16-16s-16 7.2-16 16z" />
                                </svg>
                            </div>
                            <div class="spec-content">
                                <div class="spec-label">Serial Number</div>
                                <div class="spec-value">
                                    <span class="badge-spec">@(item.SerialNumber ?? "—")</span>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(item.AssetTag))
                        {
                            <div class="spec-item">
                                <div class="spec-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" width="16"
                                        height="16">
                                        <path
                                            d="M0 80V229.5c0 17 6.7 33.3 18.7 45.3l176 176c25 25 65.5 25 90.5 0L418.7 317.3c25-25 25-65.5 0-90.5l-176-176c-12-12-28.3-18.7-45.3-18.7H48C21.5 32 0 53.5 0 80zm112 32a32 32 0 1 1 0 64 32 32 0 1 1 0-64z" />
                                    </svg>
                                </div>
                                <div class="spec-content">
                                    <div class="spec-label">Asset Tag</div>
                                    <div class="spec-value">
                                        <span class="badge-tag">@item.AssetTag</span>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Processor -->
                        @if (item.Processor != null && !string.IsNullOrEmpty(item.Processor.ProcessorInfo))
                        {
                            <div class="spec-item">
                                <div class="spec-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" width="16"
                                        height="16">
                                        <path
                                            d="M176 24c0-13.3-10.7-24-24-24s-24 10.7-24 24V64c-35.3 0-64 28.7-64 64H24c-13.3 0-24 10.7-24 24s10.7 24 24 24H64v56H24c-13.3 0-24 10.7-24 24s10.7 24 24 24H64v56H24c-13.3 0-24 10.7-24 24s10.7 24 24 24H64c0 35.3 28.7 64 64 64v40c0 13.3 10.7 24 24 24s24-10.7 24-24V448h56v40c0 13.3 10.7 24 24 24s24-10.7 24-24V448h56v40c0 13.3 10.7 24 24 24s24-10.7 24-24V448c35.3 0 64-28.7 64-64h40c13.3 0 24-10.7 24-24s-10.7-24-24-24H448V280h40c13.3 0 24-10.7 24-24s-10.7-24-24-24H448V176h40c13.3 0 24-10.7 24-24s-10.7-24-24-24H448c0-35.3-28.7-64-64-64V24c0-13.3-10.7-24-24-24s-24 10.7-24 24V64H280V24c0-13.3-10.7-24-24-24s-24 10.7-24 24V64H176V24zM160 128H352c17.7 0 32 14.3 32 32V352c0 17.7-14.3 32-32 32H160c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32zm192 32H160V352H352V160z" />
                                    </svg>
                                </div>
                                <div class="spec-content">
                                    <div class="spec-label">Processor</div>
                                    <div class="spec-value">@item.Processor.ProcessorInfo</div>
                                    @if (item.Processor.ClockSpeedMHz.HasValue && item.Processor.ClockSpeedMHz.Value > 0)
                                    {
                                        <div class="spec-badges mt-1">
                                            <span class="badge-spec">@item.Processor.ClockSpeedMHz MHz</span>
                                            @if (item.Processor.NumberOfCores.HasValue && item.Processor.NumberOfCores.Value > 0)
                                            {
                                                <span class="badge-spec">@item.Processor.NumberOfCores Cores</span>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- RAM -->
                        @if (item.MemoryDetails != null && item.MemoryDetails.RAM > 0)
                        {
                            <div class="spec-item">
                                <div class="spec-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" fill="currentColor" width="16"
                                        height="16">
                                        <path
                                            d="M64 64C28.7 64 0 92.7 0 128v7.4c0 6.8 4.4 12.6 10.1 16.3C23.3 158.1 32 173.9 32 192s-8.7 33.9-21.9 40.3C4.4 235.9 0 241.7 0 248.6V320H576V248.6c0-6.8-4.4-12.6-10.1-16.3C552.7 225.9 544 210.1 544 192s8.7-33.9 21.9-40.3c5.7-3.7 10.1-9.5 10.1-16.3V128c0-35.3-28.7-64-64-64H64zM576 352H0v64c0 17.7 14.3 32 32 32H80V416c0-8.8 7.2-16 16-16s16 7.2 16 16v32h64V416c0-8.8 7.2-16 16-16s16 7.2 16 16v32h64V416c0-8.8 7.2-16 16-16s16 7.2 16 16v32h64V416c0-8.8 7.2-16 16-16s16 7.2 16 16v32h64V416c0-8.8 7.2-16 16-16s16 7.2 16 16v32h48c17.7 0 32-14.3 32-32V352zM192 160v64c0 17.7-14.3 32-32 32s-32-14.3-32-32V160c0-17.7 14.3-32 32-32s32 14.3 32 32zm128 0v64c0 17.7-14.3 32-32 32s-32-14.3-32-32V160c0-17.7 14.3-32 32-32s32 14.3 32 32zm128 0v64c0 17.7-14.3 32-32 32s-32-14.3-32-32V160c0-17.7 14.3-32 32-32s32 14.3 32 32z" />
                                    </svg>
                                </div>
                                <div class="spec-content">
                                    <div class="spec-label">RAM</div>
                                    <div class="spec-value">
                                        <span class="badge-spec">@item.MemoryDetails.RAM GB</span>
                                    </div>
                                    @if (item.MemoryDetails.VirtualMemory > 0)
                                    {
                                        <div class="spec-note">Virtual: @item.MemoryDetails.VirtualMemory GB</div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Storage -->
                        @if (item.HardDisk != null && item.HardDisk.CapacityGB.HasValue && item.HardDisk.CapacityGB.Value > 0)
                        {
                            <div class="spec-item">
                                <div class="spec-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" width="16"
                                        height="16">
                                        <path
                                            d="M0 96C0 60.7 28.7 32 64 32H448c35.3 0 64 28.7 64 64V416c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V96zM64 160H224v96H64V160zm0 128H224v96H64V288zM352 160v96H256V160h96zM256 288h96v96H256V288zM448 160v96H384V160h64zM384 288h64v96H384V288z" />
                                    </svg>
                                </div>
                                <div class="spec-content">
                                    <div class="spec-label">Storage</div>
                                    <div class="spec-value">
                                        <span class="badge-spec">@item.HardDisk.CapacityGB GB</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(item.HardDisk.Model))
                                    {
                                        <div class="spec-note">@item.HardDisk.Model</div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Operating System -->
                        @if (item.OperatingSystemInfo != null && !string.IsNullOrEmpty(item.OperatingSystemInfo.Name))
                        {
                            <div class="spec-item">
                                <div class="spec-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" fill="currentColor" width="16"
                                        height="16">
                                        <path
                                            d="M64 0C28.7 0 0 28.7 0 64V352c0 35.3 28.7 64 64 64H240l-10.7 32H160c-17.7 0-32 14.3-32 32s14.3 32 32 32H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H346.7L336 416H512c35.3 0 64-28.7 64-64V64c0-35.3-28.7-64-64-64H64zM512 64V288H64V64H512z" />
                                    </svg>
                                </div>
                                <div class="spec-content">
                                    <div class="spec-label">Operating System</div>
                                    <div class="spec-value">
                                        <span class="badge-spec">@item.OperatingSystemInfo.Name</span>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Network -->
                        @if (item.NetworkDetails != null)
                        {
                            @if (!string.IsNullOrEmpty(item.NetworkDetails.IPAddress))
                            {
                                <div class="spec-item">
                                    <div class="spec-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" fill="currentColor" width="16"
                                            height="16">
                                            <path
                                                d="M256 64H384v64H256V64zM240 0c-26.5 0-48 21.5-48 48v96c0 26.5 21.5 48 48 48h48v32H32c-17.7 0-32 14.3-32 32s14.3 32 32 32h96v32H80c-26.5 0-48 21.5-48 48v96c0 26.5 21.5 48 48 48H240c26.5 0 48-21.5 48-48V368c0-26.5-21.5-48-48-48H192V288H448v32H400c-26.5 0-48 21.5-48 48v96c0 26.5 21.5 48 48 48H560c26.5 0 48-21.5 48-48V368c0-26.5-21.5-48-48-48H512V288h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H352V192h48c26.5 0 48-21.5 48-48V48c0-26.5-21.5-48-48-48H240zM96 448V384H224v64H96zm320-64H544v64H416V384z" />
                                        </svg>
                                    </div>
                                    <div class="spec-content">
                                        <div class="spec-label">IP Address</div>
                                        <div class="spec-value">
                                            <span class="badge-spec code">@item.NetworkDetails.IPAddress</span>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.NetworkDetails.MACAddress))
                            {
                                <div class="spec-item">
                                    <div class="spec-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" width="16"
                                            height="16">
                                            <path
                                                d="M64 32C28.7 32 0 60.7 0 96v32H512V96c0-35.3-28.7-64-64-64H64zM0 192V416c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V384H512v32c0 17.7-14.3 32-32 32s-32-14.3-32-32V352c0-17.7 14.3-32 32-32s32 14.3 32 32v32h64V192H0zm144 96h32c8.8 0 16 7.2 16 16v64c0 8.8-7.2 16-16 16H144c-8.8 0-16-7.2-16-16V304c0-8.8 7.2-16 16-16zm-16-48c0-8.8 7.2-16 16-16h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H144c-8.8 0-16-7.2-16-16V240zm144 48h32c8.8 0 16 7.2 16 16v64c0 8.8-7.2 16-16 16H272c-8.8 0-16-7.2-16-16V304c0-8.8 7.2-16 16-16zm-16-48c0-8.8 7.2-16 16-16h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H272c-8.8 0-16-7.2-16-16V240z" />
                                        </svg>
                                    </div>
                                    <div class="spec-content">
                                        <div class="spec-label">MAC Address</div>
                                        <div class="spec-value">
                                            <span class="badge-spec code">@item.NetworkDetails.MACAddress</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                        <!-- User Info -->
                        @if (item.AssetState != null && !string.IsNullOrEmpty(item.AssetState.AssociatedTo))
                        {
                            <div class="spec-item">
                                <div class="spec-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" width="16"
                                        height="16">
                                        <path
                                            d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z" />
                                    </svg>
                                </div>
                                <div class="spec-content">
                                    <div class="spec-label">Associated To</div>
                                    <div class="spec-value">
                                        <span class="badge-spec">@item.AssetState.AssociatedTo</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(item.AssetState.Department))
                                    {
                                        <div class="spec-note">@item.AssetState.Department</div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Location -->
                        @if (!string.IsNullOrEmpty(item.Location))
                        {
                            <div class="spec-item">
                                <div class="spec-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" fill="currentColor" width="16"
                                        height="16">
                                        <path
                                            d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z" />
                                    </svg>
                                </div>
                                <div class="spec-content">
                                    <div class="spec-label">Location</div>
                                    <div class="spec-value">
                                        <span class="badge-spec">@item.Location</span>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Purchase Cost -->
                        @if (item.PurchaseCost > 0)
                        {
                            <div class="spec-item">
                                <div class="spec-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" fill="currentColor" width="16"
                                        height="16">
                                        <path
