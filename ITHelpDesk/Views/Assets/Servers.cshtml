@model List<ITHelpDesk.Models.Assets.Server>
@using ITHelpDesk.Models.Assets
@{
    ViewData["Title"] = Localizer["Servers"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/assets.css" />
}

<div class="computers-header mb-4">
    <div class="container-fluid px-0">
        <div class="row align-items-center">
            <div class="col-lg-8 mb-3 mb-lg-0">
                <div class="d-flex align-items-center">
                    <div class="icon-box me-3">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" width="32"
                            height="32">
                            <path
                                d="M50.7 58.5L0 160H208V32H93.7C75.5 32 58.9 42.3 50.7 58.5zM240 160H448L397.3 58.5C389.1 42.3 372.5 32 354.3 32H240V160zm208 32H0V416c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V192zM64 296c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H88c-13.3 0-24-10.7-24-24zm0 96c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H88c-13.3 0-24-10.7-24-24zM256 296c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H280c-13.3 0-24-10.7-24-24zm0 96c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H280c-13.3 0-24-10.7-24-24z" />
                        </svg>
                    </div>
                    <div>
                        <h1 class="page-title mb-1">@Localizer["Servers"]</h1>
                        <p class="page-subtitle mb-0">
                            <i class="fa-solid fa-server me-2"></i>
                            @Localizer["Manage and monitor"] <span class="fw-bold text-primary">@Model.Count</span>
                            @Localizer["servers in your infrastructure"]
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="d-grid gap-2 d-sm-flex justify-content-lg-end">
                    <a asp-action="ExportServersToExcel" class="btn btn-excel me-2"
                        title="@Localizer["Export all servers to Excel file"]">
                        <i class="fa-solid fa-file-excel me-2"></i>
                        <span>@Localizer["Export to Excel"]</span>
                    </a>
                    <a asp-action="CreateServer" class="btn btn-primary btn-add-new">
                        <i class="fa-solid fa-plus-circle me-2"></i>@Localizer["Add New Server"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" width="64" height="64">
                <path
                    d="M50.7 58.5L0 160H208V32H93.7C75.5 32 58.9 42.3 50.7 58.5zM240 160H448L397.3 58.5C389.1 42.3 372.5 32 354.3 32H240V160zm208 32H0V416c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V192zM64 296c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H88c-13.3 0-24-10.7-24-24zm0 96c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H88c-13.3 0-24-10.7-24-24zM256 296c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H280c-13.3 0-24-10.7-24-24zm0 96c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H280c-13.3 0-24-10.7-24-24z" />
            </svg>
        </div>
        <h3 class="empty-state-title">@Localizer["No Servers Found"]</h3>
        <p class="empty-state-text">@Localizer["Get started by adding your first server to manage your infrastructure."]</p>
        <a asp-action="CreateServer" class="btn btn-primary btn-lg mt-3">
            <i class="fa-solid fa-plus-circle me-2"></i>@Localizer["Add Your First Server"]
        </a>
    </div>
}
else
{
    <!-- View Controls: Compact toggle + Expand/Collapse all -->
    @* <div class="d-flex flex-wrap gap-2 justify-content-between align-items-center mb-3">
        <div class="btn-group" role="group" aria-label="Expand/Collapse">
