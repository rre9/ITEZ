                <i class="fa-solid fa-angles-down me-1"></i>Expand all
            </button>
            <button type="button" id="collapseAll" class="btn btn-outline-secondary btn-sm">
                <i class="fa-solid fa-angles-up me-1"></i>Collapse all
            </button>
        </div>
        <div class="form-check form-switch m-0">
            <input class="form-check-input" type="checkbox" id="compactToggle" />
            <label class="form-check-label" for="compactToggle">Compact mode</label>
        </div>
    </div> *@

                <div class="computers-grid" id="serverGrid">
        @foreach (var item in Model)
        {
            <div class="computer-card">
                <div class="computer-card-header">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="computer-info">
                            <div class="computer-icon server-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" width="24"
                                    height="24">
                                    <path
                                        d="M50.7 58.5L0 160H208V32H93.7C75.5 32 58.9 42.3 50.7 58.5zM240 160H448L397.3 58.5C389.1 42.3 372.5 32 354.3 32H240V160zm208 32H0V416c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V192zM64 296c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H88c-13.3 0-24-10.7-24-24zm0 96c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H88c-13.3 0-24-10.7-24-24zM256 296c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H280c-13.3 0-24-10.7-24-24zm0 96c0-13.3 10.7-24 24-24h80c13.3 0 24 10.7 24 24s-10.7 24-24 24H280c-13.3 0-24-10.7-24-24z" />
                                </svg>
                            </div>
                            <div>
                                <h4 class="computer-name">@item.Name</h4>
                                @if (item.Product != null)
                                {
                                    <div class="computer-model">
                                        <i class="fa-solid fa-tag me-1"></i>
                                        @item.Product.ProductName
                                        @if (!string.IsNullOrEmpty(item.Product.Manufacturer))
                                        {
                                            <span class="text-muted">• @item.Product.Manufacturer</span>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="computer-actions d-flex align-items-center gap-2">
                            @if (item.AssetState != null)
                            {
                                var statusClass = item.AssetState.Status switch
                                {
                                    AssetStatusEnum.InStore => "status-in-store",
                                    AssetStatusEnum.InUse => "status-in-use",
                                    AssetStatusEnum.InRepair => "status-in-repair",
                                    AssetStatusEnum.Expired => "status-expired",
                                    AssetStatusEnum.Disposed => "status-disposed",
                                    _ => "status-unknown"
                                                                                            };
                                var statusText = item.AssetState.Status switch
                                {
                                    AssetStatusEnum.InStore => Localizer["In Store"].ToString(),
                                    AssetStatusEnum.InUse => Localizer["In Use"].ToString(),
                                    AssetStatusEnum.InRepair => Localizer["In Repair"].ToString(),
                                    AssetStatusEnum.Expired => Localizer["Expired"].ToString(),
                                    AssetStatusEnum.Disposed => Localizer["Disposed"].ToString(),
                                    _ => Localizer["Unknown"].ToString()
                                };
                                var statusIcon = item.AssetState.Status switch
                                {
                                    AssetStatusEnum.InStore => "fa-box",
                                    AssetStatusEnum.InUse => "fa-check-circle",
                                    AssetStatusEnum.InRepair => "fa-wrench",
                                    AssetStatusEnum.Expired => "fa-exclamation-triangle",
                                    AssetStatusEnum.Disposed => "fa-trash",
                                    _ => "fa-question-circle"
                                                                                            };
                                <span class="status-badge @statusClass">
                                    <i class="fa-solid @statusIcon me-1"></i>@statusText
                                </span>
                            }
                            <button class="btn btn-sm btn-outline-primary toggle-details" type="button"
                                data-bs-toggle="collapse" data-bs-target="#card-@item.Id" aria-expanded="true"
                                aria-controls="card-@item.Id" title="@Localizer["Toggle details"]">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" width="14"
                                    height="14">
                                    <path
                                        d="M201.4 342.6c12.5 12.5 32.8 12.5 45.3 0l160-160c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L224 274.7 86.6 137.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l160 160z" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>

                <div id="card-@item.Id" class="collapse show">
                    <div class="computer-card-body">
                        <div class="specs-grid">
                            <!-- Basic Info -->
                            <div class="spec-item">
                                <div class="spec-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" width="16"
                                        height="16">
                                        <path
                                            d="M24 32C10.7 32 0 42.7 0 56V456c0 13.3 10.7 24 24 24H40c13.3 0 24-10.7 24-24V56c0-13.3-10.7-24-24-24H24zm88 0c-8.8 0-16 7.2-16 16V464c0 8.8 7.2 16 16 16s16-7.2 16-16V48c0-8.8-7.2-16-16-16zm72 0c-13.3 0-24 10.7-24 24V456c0 13.3 10.7 24 24 24h16c13.3 0 24-10.7 24-24V56c0-13.3-10.7-24-24-24H184zm96 0c-13.3 0-24 10.7-24 24V456c0 13.3 10.7 24 24 24h16c13.3 0 24-10.7 24-24V56c0-13.3-10.7-24-24-24H280zM448 56V456c0 13.3 10.7 24 24 24h16c13.3 0 24-10.7 24-24V56c0-13.3-10.7-24-24-24H472c-13.3 0-24 10.7-24 24zm-64-8V464c0 8.8 7.2 16 16 16s16-7.2 16-16V48c0-8.8-7.2-16-16-16s-16 7.2-16 16z" />
                                    </svg>
                                </div>
                                <div class="spec-content">
                                    <div class="spec-label">@Localizer["Serial Number"]</div>
                                    <div class="spec-value">
                                        <span class="badge-spec">@(item.SerialNumber ?? "—")</span>
                                    </div>
                                </div>
                            </div>

                            @if (item.ComputerInfo != null && !string.IsNullOrEmpty(item.ComputerInfo.ServiceTag))
                            {
                                <div class="spec-item">
                                    <div class="spec-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" width="16"
                                            height="16">
                                            <path
                                                d="M0 80V229.5c0 17 6.7 33.3 18.7 45.3l176 176c25 25 65.5 25 90.5 0L418.7 317.3c25-25 25-65.5 0-90.5l-176-176c-12-12-28.3-18.7-45.3-18.7H48C21.5 32 0 53.5 0 80zm112 32a32 32 0 1 1 0 64 32 32 0 1 1 0-64z" />
                                        </svg>
                                    </div>
                                    <div class="spec-content">
                                        <div class="spec-label">@Localizer["Service Tag"]</div>
                                        <div class="spec-value">
                                            <span class="badge-spec">@item.ComputerInfo.ServiceTag</span>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(item.AssetTag))
                            {
                                <div class="spec-item">
                                    <div class="spec-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" width="16"
                                            height="16">
                                            <path
                                                d="M0 80V229.5c0 17 6.7 33.3 18.7 45.3l176 176c25 25 65.5 25 90.5 0L418.7 317.3c25-25 25-65.5 0-90.5l-176-176c-12-12-28.3-18.7-45.3-18.7H48C21.5 32 0 53.5 0 80zm112 32a32 32 0 1 1 0 64 32 32 0 1 1 0-64z" />
                                        </svg>
                                    </div>
                                    <div class="spec-content">
                                        <div class="spec-label">@Localizer["Asset Tag"]</div>
                                        <div class="spec-value">
                                            <span class="badge-tag">@item.AssetTag</span>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Operating System -->
                            @if (item.OperatingSystemInfo != null && !string.IsNullOrEmpty(item.OperatingSystemInfo.Name))
                            {
                                <div class="spec-item">
                                    <div class="spec-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" fill="currentColor" width="16"
                                            height="16">
                                            <path
                                                d="M64 0C28.7 0 0 28.7 0 64V352c0 35.3 28.7 64 64 64H240l-10.7 32H160c-17.7 0-32 14.3-32 32s14.3 32 32 32H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H346.7L336 416H512c35.3 0 64-28.7 64-64V64c0-35.3-28.7-64-64-64H64zM512 64V288H64V64H512z" />
                                        </svg>
                                    </div>
                                    <div class="spec-content">
                                        <div class="spec-label">@Localizer["Operating System"]</div>
                                        <div class="spec-value">
                                            <span class="badge-spec">@item.OperatingSystemInfo.Name</span>
                                        </div>
                                    </div>
                                </div>
                            }

                            @* Storage *@
                            @if (item.HardDisk != null && item.HardDisk.CapacityGB.HasValue)
                            {
                                <div class="spec-item">
                                    <div class="spec-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" fill="currentColor" width="16"
                                            height="16">
                                            <path
                                                d="M160 48c0-8.8 7.2-16 16-16H400c8.8 0 16 7.2 16 16v16H160V48zM128 96H448v16H128V96zm-32 32H480V48c0-26.5-21.5-48-48-48H176c-26.5 0-48 21.5-48 48V128zM32 192H544c17.7 0 32 14.3 32 32V448c0 35.3-28.7 64-64 64H64C28.7 512 0 483.3 0 448V224c0-17.7 14.3-32 32-32zM384 304a32 32 0 1 0 -64 0 32 32 0 1 0 64 0zM192 272c-17.7 0-32 14.3-32 32s14.3 32 32 32H288V272H192zm112 96H192c-17.7 0-32 14.3-32 32s14.3 32 32 32H304V368z" />
                                        </svg>
                                    </div>
                                    <div class="spec-content">
                                        <div class="spec-label">@Localizer["Storage"]</div>
                                        <div class="spec-value">
                                            <span class="badge-spec">@item.HardDisk.CapacityGB GB</span>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (item.ExpiryDate.HasValue)
                            {
                                <div class="spec-item">
                                    <div class="spec-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" width="16"
                                            height="16">
                                            <path
                                                d="M152 64c0-8.8-7.2-16-16-16s-16 7.2-16 16V96H96V64c0-35.3 28.7-64 64-64h128c35.3 0 64 28.7 64 64V96h-24V64c0-8.8-7.2-16-16-16s-16 7.2-16 16V96H152V64zm-24 96H64c-35.3 0-64 28.7-64 64V448c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V224c0-35.3-28.7-64-64-64H320 128zm72 160H120c-13.3 0-24 10.7-24 24s10.7 24 24 24H200c13.3 0 24-10.7 24-24s-10.7-24-24-24zm56 0H328c13.3 0 24 10.7 24 24s-10.7 24-24 24H256c-13.3 0-24-10.7-24-24s10.7-24 24-24z" />
                                        </svg>
                                    </div>
                                    <div class="spec-content">
                                        <div class="spec-label">@Localizer["Expiry Date"]</div>
                                        <div class="spec-value">
                                            <span class="badge-spec">@item.ExpiryDate.Value.ToLocalTime().ToString("MMM dd, yyyy")</span>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (item.WarrantyExpiryDate.HasValue)
                            {
                                <div class="spec-item">
                                    <div class="spec-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" width="16"
                                            height="16">
                                            <path
                                                d="M466.5 83.7 278 3.5c-9-3.9-19-3.9-28 0L45.5 83.7C27.4 91.6 16 108.7 16 127.8c0 198.5 114.5 335.7 239.8 380.6 7.6 2.7 15.9 2.7 23.6 0C381.5 463.5 496 326.3 496 127.8c0-19.2-11.4-36.2-29.5-44.1zM256 288c-44.1 0-80-35.9-80-80s35.9-80 80-80 80 35.9 80 80-35.9 80-80 80z" />
                                        </svg>
                                    </div>
                                    <div class="spec-content">
                                        <div class="spec-label">@Localizer["Warranty Expiry Date"]</div>
                                        <div class="spec-value">
                                            <span class="badge-spec">@item.WarrantyExpiryDate.Value.ToLocalTime().ToString("MMM dd, yyyy")</span>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (item.AcquisitionDate.HasValue)
                            {
                                <div class="spec-item">
                                    <div class="spec-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" width="16"
                                            height="16">
                                            <path
                                                d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM232 120c0-13.3 10.7-24 24-24s24 10.7 24 24V256c0 8-4 15.5-10.7 20l-72 48c-11 7.3-25.9 4.3-33.2-6.7s-4.3-25.9 6.7-33.2l61.3-40.9V120z" />
                                        </svg>
                                    </div>
                                    <div class="spec-content">
                                        <div class="spec-label">@Localizer["Acquisition Date"]</div>
                                        <div class="spec-value">
                                            <span class="badge-spec">@item.AcquisitionDate.Value.ToLocalTime().ToString("MMM dd, yyyy")</span>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (item.Vendor != null)
                            {
                                <div class="spec-item">
                                    <div class="spec-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" fill="currentColor" width="16"
                                            height="16">
                                            <path
                                                d="M0 80C0 53.5 21.5 32 48 32H592c26.5 0 48 21.5 48 48v48H0V80zm0 96H640V432c0 26.5-21.5 48-48 48H48c-26.5 0-48-21.5-48-48V176zm128 80c-17.7 0-32 14.3-32 32v96c0 17.7 14.3 32 32 32H352c17.7 0 32-14.3 32-32V288c0-17.7-14.3-32-32-32H128zM416 288v160h48c17.7 0 32-14.3 32-32V288c0-17.7-14.3-32-32-32H416z" />
                                        </svg>
                                    </div>
                                    <div class="spec-content">
                                        <div class="spec-label">@Localizer["Vendor"]</div>
                                        <div class="spec-value">
                                            <span class="badge-spec">@item.Vendor.VendorName</span>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Network -->
                            @if (item.NetworkDetails != null)
                            {
                                @if (!string.IsNullOrEmpty(item.NetworkDetails.IPAddress))
                                {
                                    <div class="spec-item">
                                        <div class="spec-icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" fill="currentColor" width="16"
                                                height="16">
                                                <path
                                                    d="M256 64H384v64H256V64zM240 0c-26.5 0-48 21.5-48 48v96c0 26.5 21.5 48 48 48h48v32H32c-17.7 0-32 14.3-32 32s14.3 32 32 32h96v32H80c-26.5 0-48 21.5-48 48v96c0 26.5 21.5 48 48 48H240c26.5 0 48-21.5 48-48V368c0-26.5-21.5-48-48-48H192V288H448v32H400c-26.5 0-48 21.5-48 48v96c0 26.5 21.5 48 48 48H560c26.5 0 48-21.5 48-48V368c0-26.5-21.5-48-48-48H512V288h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H352V192h48c26.5 0 48-21.5 48-48V48c0-26.5-21.5-48-48-48H240zM96 448V384H224v64H96zm320-64H544v64H416V384z" />
                                            </svg>
                                        </div>
                                        <div class="spec-content">
                                            <div class="spec-label">@Localizer["IP Address"]</div>
                                            <div class="spec-value">
                                                <span class="badge-spec code">@item.NetworkDetails.IPAddress</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(item.NetworkDetails.MACAddress))
                                {
                                    <div class="spec-item">
                                        <div class="spec-icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" width="16"
                                                height="16">
                                                <path
                                                    d="M64 32C28.7 32 0 60.7 0 96v32H512V96c0-35.3-28.7-64-64-64H64zM0 192V416c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V384H512v32c0 17.7-14.3 32-32 32s-32-14.3-32-32V352c0-17.7 14.3-32 32-32s32 14.3 32 32v32h64V192H0zm144 96h32c8.8 0 16 7.2 16 16v64c0 8.8-7.2 16-16 16H144c-8.8 0-16-7.2-16-16V304c0-8.8 7.2-16 16-16zm-16-48c0-8.8 7.2-16 16-16h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H144c-8.8 0-16-7.2-16-16V240zm144 48h32c8.8 0 16 7.2 16 16v64c0 8.8-7.2 16-16 16H272c-8.8 0-16-7.2-16-16V304c0-8.8 7.2-16 16-16zm-16-48c0-8.8 7.2-16 16-16h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H272c-8.8 0-16-7.2-16-16V240z" />
                                            </svg>
                                        </div>
                                        <div class="spec-content">
