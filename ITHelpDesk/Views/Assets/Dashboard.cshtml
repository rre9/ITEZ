@model dynamic
@{
    ViewData["Title"] = "لوحة تحكم الأصول";
}

<div class="page-wrapper">
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        <i class="fa-solid fa-server me-2"></i>لوحة تحكم الأصول
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="container-xl">
            <!-- إحصائيات سريعة -->
            <div class="row row-deck row-cards mb-4">
                <!-- Access Points -->
                <div class="col-md-6 col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-truncate">
                                <h3 class="card-title">
                                    <a href="@Url.Action("AccessPoints", "Assets")" class="text-reset">
                                        نقاط الوصول
                                    </a>
                                </h3>
                            </div>
                            <div class="d-flex align-items-baseline">
                                <div class="h1 mb-0">@Model.AccessPoints</div>
                                <div class="ms-auto">
                                    <span class="badge bg-primary">
                                        <i class="fa-solid fa-wifi"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Computers -->
                <div class="col-md-6 col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-truncate">
                                <h3 class="card-title">
                                    <a href="@Url.Action("Computers", "Assets")" class="text-reset">
                                        أجهزة الكمبيوتر
                                    </a>
                                </h3>
                            </div>
                            <div class="d-flex align-items-baseline">
                                <div class="h1 mb-0">@Model.Computers</div>
                                <div class="ms-auto">
                                    <span class="badge bg-info">
                                        <i class="fa-solid fa-desktop"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Servers -->
                <div class="col-md-6 col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-truncate">
                                <h3 class="card-title">
                                    <a href="@Url.Action("Servers", "Assets")" class="text-reset">
                                        السيرفرات
                                    </a>
                                </h3>
                            </div>
                            <div class="d-flex align-items-baseline">
                                <div class="h1 mb-0">@Model.Servers</div>
                                <div class="ms-auto">
                                    <span class="badge bg-warning">
                                        <i class="fa-solid fa-server"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Smartphones -->
                <div class="col-md-6 col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-truncate">
                                <h3 class="card-title">
                                    <a href="@Url.Action("Smartphones", "Assets")" class="text-reset">
                                        الهواتف الذكية
                                    </a>
                                </h3>
                            </div>
                            <div class="d-flex align-items-baseline">
                                <div class="h1 mb-0">@Model.Smartphones</div>
                                <div class="ms-auto">
                                    <span class="badge bg-success">
                                        <i class="fa-solid fa-mobile"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- صف إضافي من الإحصائيات -->
            <div class="row row-deck row-cards mb-4">
                <!-- Virtual Machines -->
                <div class="col-md-6 col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-truncate">
                                <h3 class="card-title">
                                    <a href="@Url.Action("VirtualMachines", "Assets")" class="text-reset">
                                        الأجهزة الافتراضية
                                    </a>
                                </h3>
                            </div>
                            <div class="d-flex align-items-baseline">
                                <div class="h1 mb-0">@Model.VirtualMachines</div>
                                <div class="ms-auto">
                                    <span class="badge bg-danger">
                                        <i class="fa-solid fa-cube"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Printers -->
                <div class="col-md-6 col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-truncate">
                                <h3 class="card-title">
                                    <a href="@Url.Action("Printers", "Assets")" class="text-reset">
                                        الطابعات
                                    </a>
                                </h3>
                            </div>
                            <div class="d-flex align-items-baseline">
                                <div class="h1 mb-0">@Model.Printers</div>
                                <div class="ms-auto">
                                    <span class="badge bg-secondary">
                                        <i class="fa-solid fa-print"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Routers -->
                <div class="col-md-6 col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-truncate">
                                <h3 class="card-title">
                                    <a href="@Url.Action("Routers", "Assets")" class="text-reset">
                                        الموجهات
                                    </a>
                                </h3>
                            </div>
                            <div class="d-flex align-items-baseline">
                                <div class="h1 mb-0">@Model.Routers</div>
                                <div class="ms-auto">
                                    <span class="badge bg-dark">
                                        <i class="fa-solid fa-router"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Switches -->
                <div class="col-md-6 col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-truncate">
                                <h3 class="card-title">
                                    <a href="@Url.Action("Switches", "Assets")" class="text-reset">
                                        المفاتيح
                                    </a>
                                </h3>
                            </div>
                            <div class="d-flex align-items-baseline">
                                <div class="h1 mb-0">@Model.Switches</div>
                                <div class="ms-auto">
                                    <span class="badge bg-primary">
                                        <i class="fa-solid fa-network-wired"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- شبكة سريعة -->
            <div class="row row-cards mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">الروابط السريعة</h3>
                        </div>
                        <div class="card-body">
                            <div class="row row-cols-auto g-3">
                                <div class="col">
                                    <a href="@Url.Action("AccessPoints", "Assets")" class="btn btn-sm btn-outline-primary">
                                        <i class="fa-solid fa-plus me-2"></i>إضافة نقطة وصول
                                    </a>
                                </div>
                                <div class="col">
                                    <a href="@Url.Action("CreateComputer", "Assets")" class="btn btn-sm btn-outline-info">
                                        <i class="fa-solid fa-plus me-2"></i>إضافة كمبيوتر
                                    </a>
                                </div>
                                <div class="col">
                                    <a href="@Url.Action("CreateServer", "Assets")" class="btn btn-sm btn-outline-warning">
                                        <i class="fa-solid fa-plus me-2"></i>إضافة سيرفر
                                    </a>
                                </div>
                                <div class="col">
                                    <a href="@Url.Action("CreateSmartphone", "Assets")" class="btn btn-sm btn-outline-success">
                                        <i class="fa-solid fa-plus me-2"></i>إضافة هاتف
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
