<style>
    .asset-type-card {
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        border: 1px solid #e5e7eb;
        border-radius: 20px;
        overflow: hidden;
        background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
        position: relative;
        height: 100%;
    }

    .asset-type-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #0066cc, #0099ff);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .asset-type-card:hover {
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 20px 40px rgba(0, 102, 204, 0.15);
        border-color: #0066cc;
    }

    .asset-type-card:hover::before {
        opacity: 1;
    }

    .asset-type-card .card-body {
        padding: 2rem 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .asset-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .asset-icon-badge {
        width: 64px;
        height: 64px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #e8f4ff 0%, #d6ebff 100%);
        border-radius: 16px;
        position: relative;
        flex-shrink: 0;
        transition: all 0.3s ease;
    }

    .asset-type-card:hover .asset-icon-badge {
        background: linear-gradient(135deg, #0066cc 0%, #0099ff 100%);
        transform: rotate(-5deg) scale(1.1);
    }

    .asset-icon-badge i {
        font-size: 2rem;
        color: #0066cc;
        transition: all 0.3s ease;
    }

    .asset-icon-badge img {
        width: 48px;
        height: 48px;
        object-fit: contain;
        transition: all 0.3s ease;
        filter: brightness(1) contrast(1.1);
    }

    .asset-type-card:hover .asset-icon-badge img {
        filter: brightness(1.2) contrast(1.2) drop-shadow(0 0 8px rgba(255, 255, 255, 0.3));
        transform: scale(1.1);
    }

    .asset-type-card:hover .asset-icon-badge i {
        color: white;
        transform: scale(1.1);
    }

    .asset-info {
        flex: 1;
        min-width: 0;
    }

    .asset-type-title {
        font-size: 1rem;
        font-weight: 700;
        color: #1e293b;
        margin: 0 0 0.25rem 0;
        letter-spacing: -0.01em;
    }

    .asset-total-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.35rem 0.85rem;
        background: linear-gradient(135deg, #0066cc 0%, #0099ff 100%);
        color: white;
        border-radius: 12px;
        font-size: 1.25rem;
        font-weight: 800;
        box-shadow: 0 4px 12px rgba(0, 102, 204, 0.25);
        transition: all 0.3s ease;
    }

    .asset-type-card:hover .asset-total-badge {
        transform: scale(1.05);
        box-shadow: 0 6px 16px rgba(0, 102, 204, 0.35);
    }

    .asset-total-badge small {
        font-size: 0.7rem;
        opacity: 0.9;
        font-weight: 600;
    }

    .add-asset-btn {
        width: 40px;
        height: 40px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f1f5f9;
        color: #64748b;
        border: 1px solid #e2e8f0;
        cursor: pointer;
        transition: all 0.3s ease;
        flex-shrink: 0;
    }

    .add-asset-btn:hover {
        background: linear-gradient(135deg, #0066cc 0%, #0099ff 100%);
        color: white;
        border-color: #0066cc;
        transform: rotate(90deg) scale(1.1);
        box-shadow: 0 4px 12px rgba(0, 102, 204, 0.3);
    }

    .asset-stats-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem;
        margin: 0.5rem 0;
    }

    .stat-box {
        padding: 0.75rem;
        background: white;
        border-radius: 12px;
        border: 1px solid #e5e7eb;
        transition: all 0.2s ease;
    }

    .stat-box:hover {
        border-color: #0066cc;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 102, 204, 0.1);
    }

    .stat-label {
        font-size: 0.75rem;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.25rem;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: 800;
        color: #1e293b;
    }

    .stat-box.in-use .stat-value {
        color: #10b981;
    }

    .stat-box.in-store .stat-value {
        color: #3b82f6;
    }

    .stat-box.in-repair .stat-value {
        color: #f59e0b;
    }

    .stat-box.others .stat-value {
        color: #6b7280;
    }

    .view-all-btn {
        margin-top: auto;
        padding: 0.65rem 1rem;
        font-weight: 600;
        font-size: 0.9rem;
        border-radius: 12px;
        transition: all 0.3s ease;
        border: 2px solid #e5e7eb;
        background: white;
        color: #0066cc;
    }

    .view-all-btn:hover {
        background: linear-gradient(135deg, #0066cc 0%, #0099ff 100%);
        border-color: #0066cc;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(0, 102, 204, 0.2);
    }

    .view-all-btn i {
        transition: transform 0.3s ease;
    }

    .view-all-btn:hover i {
        transform: translateX(4px);
    }
</style>

