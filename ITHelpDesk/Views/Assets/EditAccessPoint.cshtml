@model ITHelpDesk.Models.Assets.AccessPoint
@{
    ViewData["Title"] = "Edit Access Point";
}

<style>
    .select-with-add {
        position: relative;
        display: flex;
        align-items: stretch;
    }

    .select-with-add .form-select {
        flex: 1;
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
        border-right: none;
        padding-right: 2.5rem;
        appearance: none;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23343a40' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m2 5 6 6 6-6'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 0.75rem center;
        background-size: 16px 12px;
    }

    .select-with-add .btn-add {
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
        padding: 0.5rem 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 45px;
        background: #f8f9fa;
        border: 1px solid #ced4da;
        color: #495057;
        transition: all 0.2s ease;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .select-with-add .btn-add:hover {
        background: #0066cc;
        border-color: #0066cc;
        color: white;
    }

    .select-with-add .btn-add::before {
        content: '+';
        font-size: 1.3rem;
        font-weight: 600;
        line-height: 1;
    }

    /* Required/Optional Field Indicators */
    .field-required {
        color: #dc3545;
        font-weight: 600;
    }

    .field-optional {
        color: #6c757d;
        font-size: 0.875rem;
        font-weight: 500;
    }

    /* Validation styling */
    .form-control.is-invalid-empty,
    .form-select.is-invalid-empty {
        border-color: #dc3545;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545' viewBox='0 0 12 12'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath fill='%23dc3545' d='M6.8 3.8H5.2V6h1.6V3.8Zm0 4.4H5.2V8h1.6v-1.8Z'/%3e%3c/svg%3e");
    }

    .form-control.is-invalid-empty:focus,
    .form-select.is-invalid-empty:focus {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
    }

    .form-error-message {
        display: block;
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        font-weight: 500;
    }

    .submit-validation-hidden {
        display: none;
    }
</style>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h5>Edit Access Point</h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditAccessPoint" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <input type="hidden" asp-for="UpdatedAt" />
                        <input type="hidden" asp-for="NetworkDetailsId" />

                        <div class="row">
                            <!-- Basic Information -->
                            <div class="col-md-12">
                                <h6 class="text-sm mb-3 fw-bold">Basic Information</h6>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">
                                    Name
                                    <span class="field-required">*</span>
                                </label>
                                <input asp-for="Name" class="form-control" required data-required="true" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <span class="form-error-message submit-validation-hidden" id="Name-required">This field
                                    is required</span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ProductId" class="form-label">
                                    Product
                                    <span class="field-required">*</span>
                                </label>
                                <div class="select-with-add">
                                    <select asp-for="ProductId" class="form-select" required data-required="true">
                                        <option value="">-- Select Product --</option>
                                        @if (ViewBag.Products != null)
                                        {
                                            @foreach (var product in ViewBag.Products as
                                                                                    List<ITHelpDesk.Models.Assets.Product>)
                                            {
                                                <option value="@product.Id" selected="@(product.Id == Model.ProductId)">
                                                    @product.ProductName - @product.Manufacturer
                                                </option>
                                            }
                                        }
                                    </select>
                                    <button type="button" class="btn btn-add" data-bs-toggle="modal"
                                        data-bs-target="#addProductModal" title="Add New Product">
                                    </button>
                                </div>
                                <span asp-validation-for="ProductId" class="text-danger"></span>
                                <span class="form-error-message submit-validation-hidden" id="ProductId-required">This
                                    field is required</span>
                            </div>

                            <!-- Asset Details -->
                            <div class="col-md-12 mt-3">
                                <h6 class="text-sm mb-3 fw-bold">Asset Details</h6>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="SerialNumber" class="form-label">
                                    Serial Number
                                    <span class="field-required">*</span>
                                </label>
                                <input asp-for="SerialNumber" class="form-control" required data-required="true" />
                                <span asp-validation-for="SerialNumber" class="text-danger"></span>
                                <span class="form-error-message submit-validation-hidden"
                                    id="SerialNumber-required">This field is required</span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AssetTag" class="form-label">
                                    Asset Tag
                                    <span class="field-optional">(Optional)</span>
                                </label>
                                <input asp-for="AssetTag" class="form-control" />
                                <span asp-validation-for="AssetTag" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="VendorId" class="form-label">
                                    Vendor
                                    <span class="field-required">*</span>
                                </label>
                                <div class="select-with-add">
                                    <select asp-for="VendorId" class="form-select" required data-required="true">
                                        <option value="">-- Select Vendor --</option>
                                        @if (ViewBag.Vendors != null)
                                        {
                                            @foreach (var vendor in ViewBag.Vendors as
                                                                                    List<ITHelpDesk.Models.Assets.Vendor>)
                                            {
                                                <option value="@vendor.Id" selected="@(vendor.Id == Model.VendorId)">
                                                    @vendor.VendorName
                                                </option>
                                            }
                                        }
                                    </select>
                                    <button type="button" class="btn btn-add" data-bs-toggle="modal"
                                        data-bs-target="#addVendorModal" title="Add New Vendor">
                                    </button>
                                </div>
                                <span asp-validation-for="VendorId" class="text-danger"></span>
                                <span class="form-error-message submit-validation-hidden" id="VendorId-required">This
                                    field is required</span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PurchaseCost" class="form-label">
                                    Purchase Cost (SAR)
                                    <span class="field-required">*</span>
                                </label>
                                <input asp-for="PurchaseCost" type="number" step="0.01" class="form-control" required
                                    data-required="true" />
                                <span asp-validation-for="PurchaseCost" class="text-danger"></span>
                                <span class="form-error-message submit-validation-hidden"
                                    id="PurchaseCost-required">This field is required</span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ExpiryDate" class="form-label">
                                    Expiry Date
                                    <span class="field-required">*</span>
                                </label>
                                <input asp-for="ExpiryDate" type="date" class="form-control" required
                                    data-required="true"
                                    value="@(Model.ExpiryDate.HasValue && Model.ExpiryDate.Value.Year >= 1900 && Model.ExpiryDate.Value.Year <= 2077 ? Model.ExpiryDate.Value.ToString("yyyy-MM-dd") : "")" />
                                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                                <span class="form-error-message submit-validation-hidden" id="ExpiryDate-required">This
                                    field is required</span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Location" class="form-label">
                                    Location
                                    <span class="field-optional">(Optional)</span>
                                </label>
                                <input asp-for="Location" class="form-control" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AcquisitionDate" class="form-label">
                                    Acquisition Date
                                    <span class="field-required">*</span>
                                </label>
                                <input asp-for="AcquisitionDate" type="date" class="form-control" required
                                    data-required="true"
                                    value="@(Model.AcquisitionDate.HasValue && Model.AcquisitionDate.Value.Year >= 1900 && Model.AcquisitionDate.Value.Year <= 2077 ? Model.AcquisitionDate.Value.ToString("yyyy-MM-dd") : "")" />
                                <span asp-validation-for="AcquisitionDate" class="text-danger"></span>
                                <span class="form-error-message submit-validation-hidden"
                                    id="AcquisitionDate-required">This field is required</span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="WarrantyExpiryDate" class="form-label">
                                    Warranty Expiry Date
                                    <span class="field-required">*</span>
                                </label>
                                <input asp-for="WarrantyExpiryDate" type="date" class="form-control" required
                                    data-required="true"
                                    value="@(Model.WarrantyExpiryDate.HasValue && Model.WarrantyExpiryDate.Value.Year >= 1900 && Model.WarrantyExpiryDate.Value.Year <= 2077 ? Model.WarrantyExpiryDate.Value.ToString("yyyy-MM-dd") : "")" />
                                <span asp-validation-for="WarrantyExpiryDate" class="text-danger"></span>
                                <span class="form-error-message submit-validation-hidden"
                                    id="WarrantyExpiryDate-required">This field is required</span>
                            </div> <!-- Asset State -->
                            <div class="col-md-12 mt-3">
                                <h6 class="text-sm mb-3 fw-bold">Asset State</h6>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AssetStateId" class="form-label">
                                    Asset Status
                                    <span class="field-required">*</span>
                                </label>
                                <select asp-for="AssetStateId" class="form-select" required data-required="true">
                                    <option value="">-- Select Asset Status --</option>
                                    @if (ViewBag.AssetStates != null)
                                    {
                                        @foreach (var state in ViewBag.AssetStates as
                                                                            List<ITHelpDesk.Models.Assets.AssetState>)
                                        {
                                            <option value="@state.Id" selected="@(state.Id == Model.AssetStateId)">
                                                @state.Status - @state.AssociatedTo
                                            </option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="AssetStateId" class="text-danger"></span>
                                <span class="form-error-message submit-validation-hidden" id="AssetStatus-required">This
                                    field is required</span>
                            </div>

                            <!-- Network Details -->
                            <div class="col-md-12 mt-3">
                                <h6 class="text-sm mb-3 fw-bold">Network Details</h6>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    IP Address
                                    <span class="field-required">*</span>
                                </label>
                                <input type="text" class="form-control" value="@Model.NetworkDetails?.IPAddress"
                                    name="NetworkDetails.IPAddress" placeholder="192.168.1.1" required
                                    data-required="true" />
                                <span class="form-error-message submit-validation-hidden" id="IPAddress-required">This
                                    field is required</span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    MAC Address
                                    <span class="field-required">*</span>
                                </label>
                                <input type="text" class="form-control" value="@Model.NetworkDetails?.MACAddress"
                                    name="NetworkDetails.MACAddress" placeholder="00:00:00:00:00:00" required
                                    data-required="true" />
                                <span class="form-error-message submit-validation-hidden" id="MACAddress-required">This
                                    field is required</span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    NIC
                                    <span class="field-optional">(Optional)</span>
                                </label>
                                <input type="text" class="form-control" value="@Model.NetworkDetails?.NIC"
                                    name="NetworkDetails.NIC" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    Network
                                    <span class="field-optional">(Optional)</span>
                                </label>
                                <input type="text" class="form-control" value="@Model.NetworkDetails?.Network"
                                    name="NetworkDetails.Network" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    Default Gateway
                                    <span class="field-optional">(Optional)</span>
                                </label>
                                <input type="text" class="form-control" value="@Model.NetworkDetails?.DefaultGateway"
                                    name="NetworkDetails.DefaultGateway" placeholder="192.168.1.1" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    DHCP Enabled
                                    <span class="field-required">*</span>
                                </label>
                                <select class="form-select" name="NetworkDetails.DHCPEnabled" required
                                    data-required="true">
                                    <option value="">-- Select Option --</option>
                                    <option value="false" selected="@(Model.NetworkDetails?.DHCPEnabled == false)">False
                                    </option>
                                    <option value="true" selected="@(Model.NetworkDetails?.DHCPEnabled == true)">True
                                    </option>
                                </select>
                                <span class="form-error-message submit-validation-hidden" id="DHCPEnabled-required">This
                                    field is required</span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    DHCP Server
                                    <span class="field-optional">(Optional)</span>
                                </label>
                                <input type="text" class="form-control" value="@Model.NetworkDetails?.DHCPServer"
                                    name="NetworkDetails.DHCPServer" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    DNS Hostname
                                    <span class="field-optional">(Optional)</span>
                                </label>
                                <input type="text" class="form-control" value="@Model.NetworkDetails?.DNSHostname"
                                    name="NetworkDetails.DNSHostname" />
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i>
                                    Save Changes
                                </button>
                                <a asp-action="AccessPoints" class="btn btn-secondary">
                                    <i class="fas fa-times me-1"></i>
                                    Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Vendor Modal -->
<div class="modal fade" id="addVendorModal" tabindex="-1" aria-labelledby="addVendorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addVendorModalLabel">Add New Vendor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addVendorForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="vendorName" class="form-label">Vendor Name <span
                                    class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="vendorName" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="vendorCurrency" class="form-label">Currency</label>
                            <input type="text" class="form-control" id="vendorCurrency" value="SR" readonly>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="vendorPhone" class="form-label">Phone No.</label>
                            <input type="text" class="form-control" id="vendorPhone">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="vendorEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="vendorEmail">
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="vendorDescription" class="form-label">Description</label>
                            <textarea class="form-control" id="vendorDescription" rows="2"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>
                    Cancel
                </button>
                <button type="button" class="btn btn-primary" onclick="saveVendor()">
                    <i class="fas fa-save me-1"></i>
                    Save
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Add Product Modal -->
