                                            {
                                                <div class="detail-item">
                                                    <span class="detail-key">@Localizer["Vendor"]:</span>
                                                    <span class="detail-val">@item.Vendor.VendorName</span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="computer-card-footer">
