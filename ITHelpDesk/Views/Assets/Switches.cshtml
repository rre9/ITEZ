@section Scripts {
        <script>
            function confirmDelete(id, name) {
                document.getElementById('deleteItemName').textContent = name;
                document.getElementById('deleteForm').action = '@Url.Action("DeleteSwitch", "Assets")/' + id;
                new bootstrap.Modal(document.getElementById('deleteModal')).show();
            }

        // Compact mode + expand/collapse helpers
        (function () {
            const grid = document.getElementById('switchGrid');
            const compactToggle = document.getElementById('compactToggle');
            const expandAllBtn = document.getElementById('expandAll');
            const collapseAllBtn = document.getElementById('collapseAll');

            const prefKey = 'switches-compact-mode';
            const saved = localStorage.getItem(prefKey) === '1';
            if (saved) compactToggle.checked = true;

            function setCompact(on) {
                if (!grid) return;
                if (on) {
                    grid.classList.add('compact');
                    document.querySelectorAll('#switchGrid .collapse.show').forEach(el => {
                        bootstrap.Collapse.getOrCreateInstance(el).hide();
                    });
                } else {
                    grid.classList.remove('compact');
                    document.querySelectorAll('#switchGrid .collapse').forEach(el => {
                        bootstrap.Collapse.getOrCreateInstance(el).show();
                    });
                }
                localStorage.setItem(prefKey, on ? '1' : '0');
            }

            setCompact(compactToggle?.checked);
            compactToggle?.addEventListener('change', (e) => setCompact(e.target.checked));
            expandAllBtn?.addEventListener('click', () => {
                document.querySelectorAll('#switchGrid .collapse').forEach(el => {
                    bootstrap.Collapse.getOrCreateInstance(el).show();
                });
            });
            collapseAllBtn?.addEventListener('click', () => {
                document.querySelectorAll('#switchGrid .collapse.show').forEach(el => {
                    bootstrap.Collapse.getOrCreateInstance(el).hide();
                });
            });
        })();
        </script>
