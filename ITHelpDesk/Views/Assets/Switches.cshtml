                                                {
                                                    <div class="detail-item">
                                                        <span class="detail-key">@Localizer["DNS Hostname"]:</span>
                                                        <span class="detail-val">@item.NetworkDetails.DNSHostname</span>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }

                                    <!-- Additional Info -->
                                    <div class="detail-section">
                                        <h6 class="detail-section-title">
                                            <i class="fa-solid fa-info-circle me-2"></i>@Localizer["Additional Information"]
                                        </h6>
                                        <div class="detail-list">
                                            <div class="detail-item">
                                                <span class="detail-key">@Localizer["Created"]:</span>
                                                <span class="detail-val">@item.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy                                     hh:mm tt")</span>
