                                                {
                                                    <div class="detail-item">
                                                        <span class="detail-key">@Localizer["NIC"]:</span>
                                                        <span class="detail-val">@item.NetworkDetails.NIC</span>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(item.NetworkDetails.Network))
                                                {
                                                    <div class="detail-item">
                                                        <span class="detail-key">@Localizer["Network"]:</span>
                                                        <span class="detail-val">@item.NetworkDetails.Network</span>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(item.NetworkDetails.DefaultGateway))
                                                {
                                                    <div class="detail-item">
                                                        <span class="detail-key">@Localizer["Gateway"]:</span>
                                                        <span class="detail-val code">@item.NetworkDetails.DefaultGateway</span>
                                                    </div>
                                                }
                                                <div class="detail-item">
                                                    <span class="detail-key">@Localizer["DHCP"]:</span>
                                                    <span class="detail-val">
                                                        @if (item.NetworkDetails.DHCPEnabled)
                                                        {
                                                            <span class="badge bg-success">@Localizer["Enabled"]</span>
