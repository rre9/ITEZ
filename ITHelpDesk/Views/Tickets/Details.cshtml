@model Ticket

@{
    var ticketNumber = $"HD-{Model.Id:D6}";
    ViewData["Title"] = ticketNumber;

    string LocalizePriority(TicketPriority priority)
    {
        return priority switch
        {
            TicketPriority.Low => Localizer["PriorityLow"].ToString(),
            TicketPriority.Medium => Localizer["PriorityMedium"].ToString(),
            TicketPriority.High => Localizer["PriorityHigh"].ToString(),
            _ => priority.ToString()
        };
    }

    string LocalizeStatus(TicketStatus status)
    {
        return status switch
        {
            TicketStatus.New => Localizer["StatusNew"].ToString(),
            TicketStatus.InProgress => Localizer["StatusInProgress"].ToString(),
            TicketStatus.Resolved => Localizer["StatusResolved"].ToString(),
            TicketStatus.Rejected => Localizer["StatusRejected"].ToString(),
            TicketStatus.Closed => Localizer["StatusClosed"].ToString(),
            _ => status.ToString()
        };
    }
}

<div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3 mb-2">
    <div>
        @if (User.IsInRole("Employee"))
        {
            <a asp-action="MyTickets" class="text-decoration-none text-secondary small fw-semibold">
                <i class="fa-solid fa-arrow-left-long me-1"></i>@Localizer["BackToTickets"]
            </a>
        }
        else if (User.IsInRole("Admin") || User.IsInRole("Support"))
        {
            <a asp-action="MyTasks" class="text-decoration-none text-secondary small fw-semibold">
                <i class="fa-solid fa-arrow-left-long me-1"></i>@Localizer["BackToTasks"]
            </a>
        }
        else if (User.IsInRole("IT"))
        {
            <a asp-action="MyTasks" class="text-decoration-none text-secondary small fw-semibold">
                <i class="fa-solid fa-arrow-left-long me-1"></i>@Localizer["BackToTasks"]
            </a>
        }
        <h1 class="display-6 fw-bold text-primary mb-2 mt-2">
            <i class="fa-solid fa-ticket me-2"></i>@ticketNumber
        </h1>
        <p class="text-muted mb-0">
            <i class="fa-solid fa-clock me-1"></i>@Localizer["Opened"] @Model.CreatedAt.ToLocalTime().ToString("f", System.Globalization.CultureInfo.CurrentUICulture) @Localizer["By"] <strong>@Model.CreatedBy?.FullName</strong>
        </p>
    </div>
</div>

<div class="d-flex justify-content-end mb-3 gap-2">
    @{
        var isEmployee = User.IsInRole("Employee");
        var isAdminOrSupport = User.IsInRole("Admin") || User.IsInRole("Support");
        var isIT = User.IsInRole("IT");
        
        // Check if this is an Access/Service Request in IT stage
        var isAccessRequestInITStage = false;
        var isServiceRequestInITStage = false;
        
        if (isIT && Model.Status == TicketStatus.InProgress)
        {
            // We need to check AccessRequest and ServiceRequest in the controller
            // For now, we'll pass this info via ViewBag or check in the view
            // Actually, better to pass it from controller
        }
    }
    
    @if (isEmployee)
    {
        <a class="btn btn-outline-secondary btn-lg" asp-action="MyTickets">@Localizer["MyTickets"]</a>
    }
    else if (isAdminOrSupport)
    {
        <a class="btn btn-outline-secondary btn-lg" asp-action="MyTasks">@Localizer["Tasks"]</a>
    }
    else if (isIT)
    {
        <a class="btn btn-outline-secondary btn-lg" asp-action="MyTasks">@Localizer["MyTasks"]</a>
    }
</div>

<div class="row g-4">
    <div class="col-12 col-xl-7">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-bottom">
                <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
                    <h5 class="mb-0 fw-semibold">
                        <i class="fa-solid fa-file-lines me-2 text-primary"></i>@Localizer["TicketDetails"]
                    </h5>
                    <div class="d-flex flex-wrap align-items-center gap-2">
                        <span class="badge rounded-pill bg-primary text-uppercase">@LocalizeStatus(Model.Status)</span>
                        <span class="badge rounded-pill @(Model.Priority == TicketPriority.High ? "bg-danger" : Model.Priority == TicketPriority.Medium ? "bg-warning text-dark" : "bg-success") text-uppercase">
                            @LocalizePriority(Model.Priority)
                        </span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <h2 class="h4 fw-bold mb-4">@Model.Title</h2>
                <div class="mb-4">
                    <h3 class="h6 text-uppercase text-muted fw-bold mb-2">
                        <i class="fa-solid fa-building me-1"></i>@Localizer["Department"]
                    </h3>
                    <p class="mb-0 fs-5">@Model.Department</p>
                </div>
                <div class="mb-4">
                    <h3 class="h6 text-uppercase text-muted fw-bold mb-2">
                        <i class="fa-solid fa-align-left me-1"></i>@Localizer["Description"]
                    </h3>
                    <p class="mb-0 text-dark">@Model.Description</p>
                </div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="border rounded-3 p-3 bg-light h-100">
                            <div class="text-muted small text-uppercase fw-bold mb-2">
                                <i class="fa-solid fa-user me-1"></i>@Localizer["CreatedBy"]
                            </div>
                            <div class="fw-semibold fs-6">@Model.CreatedBy?.FullName</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded-3 p-3 bg-light h-100">
                            <div class="text-muted small text-uppercase fw-bold mb-2">
                                <i class="fa-solid fa-user-check me-1"></i>@Localizer["AssignedTo"]
                            </div>
                            <div class="fw-semibold fs-6">@(Model.AssignedTo?.FullName ?? Localizer["Unassigned"])</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded-3 p-3 bg-light h-100">
                            <div class="text-muted small text-uppercase fw-bold mb-2">
                                <i class="fa-solid fa-calendar-plus me-1"></i>@Localizer["CreatedAt"]
                            </div>
                            <div class="fw-semibold fs-6">@Model.CreatedAt.ToLocalTime().ToString("g", System.Globalization.CultureInfo.CurrentUICulture)</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded-3 p-3 bg-light h-100">
                            <div class="text-muted small text-uppercase fw-bold mb-2">
                                <i class="fa-solid fa-clock-rotate-left me-1"></i>@Localizer["LastUpdated"]
                            </div>
                            <div class="fw-semibold fs-6">
                                @(Model.Logs.OrderByDescending(l => l.Timestamp).FirstOrDefault()?.Timestamp.ToLocalTime().ToString("g", System.Globalization.CultureInfo.CurrentUICulture) ?? Localizer["NoUpdatesYet"])
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-xl-5">
        @* IT Execution Section - Only visible for IT users in IT Execution stage *@
        @if (ViewBag.CanITExecute == true)
        {
            <div class="card border-0 shadow-sm mb-4 border-primary">
                <div class="card-header bg-primary text-white border-0">
                    <h2 class="h5 fw-semibold mb-0">
                        <i class="fa-solid fa-server me-2"></i>@Localizer["ITExecution"]
                    </h2>
                </div>
                <div class="card-body">
                    <p class="text-secondary mb-4">@Localizer["ITExecutionDescription"]</p>
                    
                    <div class="d-flex flex-column gap-3">
                        <form asp-action="CompleteAndClose" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                <label for="completionNotes" class="form-label fw-semibold">@Localizer["CompletionNotes"]</label>
                                <textarea id="completionNotes" name="notes" class="form-control" rows="3" placeholder="@Localizer["EnterCompletionNotes"]" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fa-solid fa-check-circle me-2"></i>@Localizer["CompleteClose"]
                            </button>
                        </form>
                        
                        <form asp-action="RejectAndClose" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                <label for="rejectionNotes" class="form-label fw-semibold">@Localizer["RejectionReason"]</label>
                                <textarea id="rejectionNotes" name="notes" class="form-control" rows="3" placeholder="@Localizer["EnterRejectionReason"]" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="fa-solid fa-times-circle me-2"></i>@Localizer["RejectClose"]
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
        
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-bottom">
                <h2 class="h5 fw-semibold mb-0">
                    <i class="fa-solid fa-paperclip me-2 text-primary"></i>@Localizer["Attachments"]
                </h2>
            </div>
            <div class="card-body">
                @if (Model.Attachments?.Any() ?? false)
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var attachment in Model.Attachments.OrderByDescending(a => a.UploadTime))
                        {
                            var downloadUrl = Url.Content($"~/{attachment.FilePath}");
                            <li class="list-group-item d-flex justify-content-between align-items-start gap-3">
                                <div>
                                    <a href="@downloadUrl" class="fw-semibold text-decoration-none" target="_blank" rel="noopener">
                                        <i class="fa-solid fa-file-lines me-2 text-secondary"></i>@attachment.FileName
                                    </a>
                                    <div class="text-secondary small">
                                        @Localizer["Uploaded"] @attachment.UploadTime.ToLocalTime().ToString("g", System.Globalization.CultureInfo.CurrentUICulture)
                                    </div>
                                </div>
                                <span class="badge bg-light text-secondary">@($"{attachment.FilePath}".Split('.').LastOrDefault()?.ToUpperInvariant())</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-secondary small">@Localizer["NoAttachmentsYet"]</div>
                }
            </div>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom">
                <h2 class="h5 fw-semibold mb-0">
                    <i class="fa-solid fa-clock-rotate-left me-2 text-primary"></i>@Localizer["ActivityLog"]
                </h2>
            </div>
            <div class="card-body">
                @if (Model.Logs?.Any() ?? false)
                {
                    <div class="timeline position-relative ps-4">
                        <div class="timeline-line position-absolute" style="left: 0.5rem; top: 0; bottom: 0; width: 2px; background: linear-gradient(180deg, var(--primary-color) 0%, #e9ecef 100%);"></div>
                        @foreach (var log in Model.Logs.OrderByDescending(l => l.Timestamp))
                        {
                            <div class="timeline-entry mb-4 position-relative">
                                <div class="timeline-dot position-absolute bg-primary rounded-circle" style="left: -1.5rem; top: 0.5rem; width: 12px; height: 12px; border: 3px solid white; box-shadow: 0 0 0 2px var(--primary-color);"></div>
                                <div class="timeline-content border rounded-3 bg-white p-3 shadow-sm">
                                    <div class="d-flex justify-content-between flex-wrap gap-2 mb-2">
                                        <span class="badge bg-primary text-uppercase small">@log.Action</span>
                                        <span class="text-muted small">
                                            <i class="fa-solid fa-clock me-1"></i>@log.Timestamp.ToLocalTime().ToString("g", System.Globalization.CultureInfo.CurrentUICulture)
                                        </span>
                                    </div>
                                    <p class="mb-2 text-dark">@log.Notes</p>
                                    @if (log.PerformedBy != null && !string.IsNullOrWhiteSpace(log.PerformedBy.FullName))
                                    {
                                        <div class="text-muted small d-flex align-items-center">
                                            <i class="fa-solid fa-user-circle me-2"></i>
                                            <strong>@log.PerformedBy.FullName</strong>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-muted small d-flex align-items-center">
                                            <i class="fa-solid fa-cog me-2"></i>
                                            <strong>@Localizer["System"]</strong>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fa-solid fa-clock-rotate-left fa-3x text-muted opacity-25 mb-3"></i>
                        <p class="text-muted mb-0">@Localizer["NoActivityLoggedYet"]</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .timeline-entry {
            transition: transform 0.2s ease;
        }
        
        .timeline-entry:hover {
            transform: translateX(5px);
        }
        
        .timeline-content {
            transition: all 0.3s ease;
        }
        
        .timeline-entry:hover .timeline-content {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
            border-color: var(--primary-color) !important;
        }
    </style>
}

