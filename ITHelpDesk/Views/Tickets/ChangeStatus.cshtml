@model TicketStatusUpdateViewModel

@{
    ViewData["Title"] = "Update Ticket Status";
}

<div class="row justify-content-center">
    <div class="col-12 col-xl-8 col-xxl-7">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4 p-lg-5">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
                    <div>
                        <h1 class="h4 fw-semibold text-primary mb-1">
                            <i class="fa-solid fa-pen-to-square me-2"></i>Update Ticket Status
                        </h1>
                        <p class="text-secondary mb-0">@(Model.RequireComment ? "Final decision: Complete or reject the Access Request. Comment required." : "Adjust workflow stages, assign support, and capture internal notes.")</p>
                    </div>
                    <a asp-action="Details" asp-route-id="@Model.TicketId" class="btn btn-outline-secondary">
                        <i class="fa-solid fa-arrow-left-long me-2"></i>Back to Details
                    </a>
                </div>

                <form asp-action="ChangeStatus" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                    <input type="hidden" asp-for="TicketId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    @if (Model.RequireComment)
                    {
                        <div class="alert alert-warning mb-4">
                            <i class="fa-solid fa-exclamation-triangle me-2"></i>
                            <strong>Final Decision Required:</strong> This is the final step for this Access Request. You must choose either <strong>Resolved</strong> (completed) or <strong>Rejected</strong> (closed). A comment is required.
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Current Status</label>
                        <div class="form-control bg-light fw-semibold">@Model.CurrentStatus</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewStatus" class="form-label fw-semibold">New Status @if (Model.RequireComment) { <span class="text-danger">*</span> }</label>
                        @if (Model.RequireComment)
                        {
                            <select asp-for="NewStatus" class="form-select" required>
                                @foreach (var status in Model.AvailableStatuses)
                                {
                                    <option value="@status" selected="@(status == Model.NewStatus ? "selected" : null)">@status</option>
                                }
                            </select>
                        }
                        else
                        {
                            <select asp-for="NewStatus" class="form-select">
                                @foreach (var status in Model.AvailableStatuses)
                                {
                                    <option value="@status" selected="@(status == Model.NewStatus ? "selected" : null)">@status</option>
                                }
                            </select>
                        }
                        <span asp-validation-for="NewStatus" class="text-danger small"></span>
                        @if (Model.RequireComment && Model.AvailableStatuses.Count() == 2)
                        {
                            <div class="form-text text-muted">
                                <i class="fa-solid fa-info-circle me-1"></i>
                                <strong>Resolved:</strong> Access request completed successfully.<br/>
                                <strong>Rejected:</strong> Access request closed/rejected.
                            </div>
                        }
                    </div>

                    @if (Model.CanAssign)
                    {
                        <div class="mb-3">
                            <label asp-for="AssignedToId" class="form-label fw-semibold">Assign To</label>
                            <select asp-for="AssignedToId" class="form-select">
                                <option value="">Unassigned</option>
                                @foreach (var user in Model.SupportUsers)
                                {
                                    <option value="@user.Id" selected="@(user.Id == Model.AssignedToId ? "selected" : null)">
                                        @user.FullName (@user.Email)
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="AssignedToId" class="text-danger small"></span>
                        </div>
                    }
                    else
                    {
                        <input type="hidden" asp-for="AssignedToId" />
                    }

                    <div class="mb-4">
                        <label asp-for="InternalNotes" class="form-label fw-semibold">
                            Comment @if (Model.RequireComment) { <span class="text-danger">*</span> }
                        </label>
                        @if (Model.RequireComment)
                        {
                            <textarea asp-for="InternalNotes" class="form-control" rows="4" 
                                      placeholder="Comment is required for final decision"
                                      required></textarea>
                            <div class="form-text text-danger">Comment is required for final decision.</div>
                        }
                        else
                        {
                            <textarea asp-for="InternalNotes" class="form-control" rows="4" 
                                      placeholder="Document notes for the activity log"></textarea>
                        }
                        <span asp-validation-for="InternalNotes" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Attachment" class="form-label fw-semibold">
                            <i class="fa-solid fa-image me-2"></i>Attachment (Image)
                        </label>
                        <input asp-for="Attachment" type="file" class="form-control" accept="image/*,.jpg,.jpeg,.png" />
                        <div class="form-text">Upload an image to attach to this status update (JPG, PNG, max 10MB)</div>
                        <span asp-validation-for="Attachment" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Details" asp-route-id="@Model.TicketId" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fa-solid fa-floppy-disk me-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

