@model AccessRequestCreateViewModel

@{
    ViewData["Title"] = Localizer["CreateAccessRequest"];
}

<div class="row justify-content-center">
    <div class="col-12 col-xl-10 col-xxl-9">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4 p-lg-5">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-5">
                    <div>
                        <h1 class="h2 fw-bold text-primary mb-2">
                            <i class="fa-solid fa-key me-2"></i>@Localizer["AccessRequest"]
                        </h1>
                        <p class="text-muted mb-0 fs-5">@Localizer["CreateAccessRequestDescription"]</p>
                    </div>
                    <a asp-action="SelectRequestType" class="btn btn-outline-secondary">
                        <i class="fa-solid fa-arrow-left-long me-2"></i>@Localizer["Back"]
                    </a>
                </div>

                <form asp-action="CreateAccessRequest" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <!-- Section 1: Applicant Information -->
                    <div class="mb-5">
                        <div class="d-flex align-items-center mb-4 pb-3 border-bottom">
                            <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
                                <i class="fa-solid fa-user text-primary fa-lg"></i>
                            </div>
                            <h5 class="fw-bold text-dark mb-0">
                                @Localizer["ApplicantInformation"]
                            </h5>
                        </div>
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label">
                                    <i class="fa-solid fa-user me-1 text-muted"></i>@Localizer["FullName"]
                                </label>
                                <input asp-for="FullName" class="form-control" placeholder="@Localizer["EnterFullName"]" />
                                <span asp-validation-for="FullName" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="EmployeeNumber" class="form-label fw-semibold"></label>
                                <input asp-for="EmployeeNumber" class="form-control" />
                                <span asp-validation-for="EmployeeNumber" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label for="Department" class="form-label fw-semibold">@Localizer["Department"] <span class="text-danger">*</span></label>
                                <select asp-for="Department" class="form-select" required>
                                    <option value="">@Localizer["SelectDepartment"]</option>
                                    @if (Model.Departments != null)
                                    {
                                        foreach (var dept in Model.Departments)
                                        {
                                            <option value="@dept">@dept</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="Department" class="text-danger small"></span>
                                <div class="invalid-feedback">Please select a department.</div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-semibold"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="SelectedManagerId" class="form-label fw-semibold"></label>
                                <select asp-for="SelectedManagerId" class="form-select" required>
                                    <option value="">@Localizer["SelectDirectManager"]</option>
                                    @if (Model.Managers != null)
                                    {
                                        foreach (var manager in Model.Managers)
                                        {
                                            <option value="@manager.Id">@manager.FullName</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="SelectedManagerId" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Section 2: Access Request Details -->
                    <div class="mb-5">
                        <h5 class="fw-semibold text-dark mb-3 pb-2 border-bottom">
                            <i class="fa-solid fa-lock me-2 text-primary"></i>@Localizer["AccessRequestDetails"]
                        </h5>
                        <div class="row g-4">
                            <div class="col-12">
                                <label class="form-label fw-semibold">@Localizer["AccessType"] <span class="text-danger">*</span></label>
                                <div class="form-check-group">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="AccessType" id="AccessType_Full" value="Full Access" required />
                                        <label class="form-check-label" for="AccessType_Full">
                                            <strong>@Localizer["FullAccess"]</strong>
                                            <small class="text-muted d-block">@Localizer["FullAccessDescription"]</small>
                                        </label>
                                    </div>
                                    <div class="form-check mt-2">
                                        <input class="form-check-input" type="radio" name="AccessType" id="AccessType_ReadOnly" value="Read Only" />
                                        <label class="form-check-label" for="AccessType_ReadOnly">
                                            <strong>@Localizer["ReadOnly"]</strong>
                                            <small class="text-muted d-block">@Localizer["ReadOnlyDescription"]</small>
                                        </label>
                                    </div>
                                    <div class="form-check mt-2">
                                        <input class="form-check-input" type="radio" name="AccessType" id="AccessType_Edit" value="Edit Access" />
                                        <label class="form-check-label" for="AccessType_Edit">
                                            <strong>@Localizer["EditAccess"]</strong>
                                            <small class="text-muted d-block">@Localizer["EditAccessDescription"]</small>
                                        </label>
                                    </div>
                                    <div class="form-check mt-2">
                                        <input class="form-check-input" type="radio" name="AccessType" id="AccessType_Admin" value="Admin Access" />
                                        <label class="form-check-label" for="AccessType_Admin">
                                            <strong>@Localizer["AdminAccess"]</strong>
                                            <small class="text-muted d-block">@Localizer["AdminAccessDescription"]</small>
                                        </label>
                                    </div>
                                </div>
                                <div class="invalid-feedback d-block">@Localizer["PleaseSelectAccessType"]</div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="SystemName" class="form-label fw-semibold"></label>
                                <input asp-for="SystemName" class="form-control" placeholder="@Localizer["SystemNamePlaceholder"]" />
                                <span asp-validation-for="SystemName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="AccessDuration" class="form-label fw-semibold"></label>
                                <input asp-for="AccessDuration" class="form-control" placeholder="@Localizer["AccessDurationPlaceholder"]" />
                                <span asp-validation-for="AccessDuration" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label fw-semibold"></label>
                                <input asp-for="StartDate" type="date" class="form-control" value="@(Model.StartDate != default(DateTime) ? Model.StartDate.ToString("yyyy-MM-dd") : "")" />
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="EndDate" class="form-label fw-semibold"></label>
                                <input asp-for="EndDate" type="date" class="form-control" value="@(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("yyyy-MM-dd") : "")" />
                                <small class="form-text text-muted">@Localizer["LeaveEmptyForPermanent"]</small>
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Reason" class="form-label fw-semibold"></label>
                                <textarea asp-for="Reason" class="form-control" rows="4" placeholder="@Localizer["ExplainWhyNeedAccess"]"></textarea>
                                <span asp-validation-for="Reason" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Section 3: Attachments -->
                    <div class="mb-5">
                            <h5 class="fw-semibold text-dark mb-3 pb-2 border-bottom">
                            <i class="fa-solid fa-paperclip me-2 text-primary"></i>@Localizer["Attachments"]
                        </h5>
                        <div class="row g-4">
                            <div class="col-12">
                                <label for="Attachments" class="form-label fw-semibold">@Localizer["SupportingDocuments"]</label>
                                <div class="form-text mb-2">
                                    <i class="fa-solid fa-info-circle me-1"></i>@Localizer["UploadSupportingDocumentsInfo"]
                                </div>
                                <input asp-for="Attachments" type="file" class="form-control" multiple accept=".pdf,.jpg,.jpeg,.png" />
                                <span asp-validation-for="Attachments" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Section 4: Notes -->
                    <div class="mb-5">
                            <h5 class="fw-semibold text-dark mb-3 pb-2 border-bottom">
                            <i class="fa-solid fa-sticky-note me-2 text-primary"></i>@Localizer["Notes"]
                        </h5>
                        <div class="row g-4">
                            <div class="col-12">
                                <label for="Notes" class="form-label fw-semibold">@Localizer["AdditionalNotes"]</label>
                                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="@Localizer["AdditionalNotesPlaceholder"]"></textarea>
                                <span asp-validation-for="Notes" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Buttons -->
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mt-5 pt-3 border-top">
                        <div class="text-secondary small">
                            <i class="fa-regular fa-clock me-1"></i>@Localizer["RequestWillBeSubmitted"]
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-action="SelectRequestType" class="btn btn-outline-secondary">@Localizer["Cancel"]</a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fa-solid fa-paper-plane me-2"></i>@Localizer["SubmitAccessRequest"]
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Basic form validation
        (function() {
            'use strict';
            const form = document.querySelector('.needs-validation');
            if (form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            }
        })();

        // Validate end date is after start date
        const startDate = document.getElementById('StartDate');
        const endDate = document.getElementById('EndDate');
        
        if (startDate && endDate) {
            startDate.addEventListener('change', function() {
                if (endDate.value && new Date(endDate.value) <= new Date(startDate.value)) {
                    endDate.setCustomValidity('End date must be after start date');
                } else {
                    endDate.setCustomValidity('');
                }
            });
            
            endDate.addEventListener('change', function() {
                if (startDate.value && new Date(endDate.value) <= new Date(startDate.value)) {
                    endDate.setCustomValidity('End date must be after start date');
                } else {
                    endDate.setCustomValidity('');
                }
            });
        }
    </script>
}
