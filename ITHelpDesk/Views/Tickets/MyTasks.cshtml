@model ITHelpDesk.ViewModels.TasksViewModel

@{
    ViewData["Title"] = "My Tasks";

    string PriorityBadge(TicketPriority priority) => priority switch
    {
        TicketPriority.High => "bg-danger",
        TicketPriority.Medium => "bg-warning text-dark",
        TicketPriority.Low => "bg-success",
        _ => "bg-secondary"
    };

    string StatusBadge(TicketStatus status) => status switch
    {
        TicketStatus.New => "bg-primary",
        TicketStatus.InProgress => "bg-info text-dark",
        TicketStatus.Resolved => "bg-success",
        TicketStatus.Rejected => "bg-secondary",
        _ => "bg-light text-dark"
    };
}

<div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3 mb-4">
    <div>
        <h1 class="display-6 fw-semibold text-primary mb-1">
            <i class="fa-solid fa-tasks me-2"></i>Tasks
        </h1>
        <p class="text-secondary mb-0">Tickets assigned to you.</p>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Ticket #</th>
                        <th scope="col">Title</th>
                        <th scope="col">Department</th>
                        <th scope="col">Priority</th>
                        <th scope="col">Status</th>
                        <th scope="col" class="text-nowrap">Created By</th>
                        <th scope="col" class="text-nowrap">Created At</th>
                        <th scope="col" class="text-nowrap text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @if (!Model.Tickets.Any())
                {
                    <tr>
                        <td colspan="8" class="py-5 text-center text-secondary">
                            <i class="fa-solid fa-inbox fa-3x mb-3 text-muted"></i>
                            <div class="fw-semibold">No tickets assigned to you.</div>
                            <p class="mb-0">All tickets assigned to you will appear here.</p>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var ticket in Model.Tickets)
                    {
                        var ticketNumber = $"HD-{ticket.Id:D6}";
                        var reviewInfo = Model.ReviewInfo.GetValueOrDefault(ticket.Id);
                        var canReview = reviewInfo?.CanReview ?? false;
                        var reviewAction = reviewInfo?.ReviewAction;
                        
                        <tr>
                            <td class="fw-semibold text-secondary">@ticketNumber</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@ticket.Id" class="text-decoration-none fw-semibold">
                                    @ticket.Title
                                </a>
                                <div class="text-muted small d-md-none">Created @ticket.CreatedAt.ToLocalTime():g</div>
                            </td>
                            <td>@ticket.Department</td>
                            <td>
                                <span class="badge rounded-pill @PriorityBadge(ticket.Priority)">@ticket.Priority</span>
                            </td>
                            <td>
                                <span class="badge rounded-pill @StatusBadge(ticket.Status)">@ticket.Status</span>
                            </td>
                            <td>@(ticket.CreatedBy?.FullName ?? "Unknown")</td>
                            <td>@ticket.CreatedAt.ToLocalTime():g</td>
                            <td class="text-nowrap text-end">
                                @if (!string.IsNullOrEmpty(reviewAction))
                                {
                                    <a class="btn btn-primary btn-sm me-2" asp-action="@reviewAction" asp-route-id="@ticket.Id">
                                        <i class="fa-solid fa-gavel me-1"></i>Review
                                    </a>
                                }
                                <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@ticket.Id">
                                    <i class="fa-solid fa-eye me-1"></i>View
                                </a>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

