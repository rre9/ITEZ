@model TicketCreateViewModel

@{
    ViewData["Title"] = "Create Ticket";
}

<div class="row justify-content-center">
    <div class="col-12 col-xl-9 col-xxl-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4 p-lg-5">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
                    <div>
                        <h1 class="h3 fw-semibold text-primary mb-1">
                            <i class="fa-solid fa-circle-plus me-2"></i>Create a Support Ticket
                        </h1>
                        <p class="text-secondary mb-0">Provide detailed information to help our support team respond quickly.</p>
                    </div>
                    @if (User.IsInRole("Admin") || User.IsInRole("Support"))
                    {
                        <a asp-action="MyTasks" class="btn btn-outline-secondary">
                            <i class="fa-solid fa-arrow-left-long me-2"></i>Back to Tasks
                        </a>
                    }
                    else
                    {
                        <a asp-action="MyTickets" class="btn btn-outline-secondary">
                            <i class="fa-solid fa-arrow-left-long me-2"></i>Back to My Tickets
                        </a>
                    }
                </div>

                <form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row g-4">
                        <div class="col-12">
                            <label asp-for="Title" class="form-label fw-semibold"></label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="Brief summary of the issue" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control" rows="6" placeholder="Describe the issue, steps taken, and impact"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Department" class="form-label fw-semibold"></label>
                            <select asp-for="Department" class="form-select">
                                <option value="">-- Select Department --</option>
                                @if (Model.Departments is not null)
                                {
                                    foreach (var dept in Model.Departments)
                                    {
                                        <option value="@dept">@dept</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="Department" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Priority" class="form-label fw-semibold"></label>
                            <select asp-for="Priority" class="form-select">
                                @foreach (var priority in Model.AvailablePriorities)
                                {
                                    <option value="@priority">@priority</option>
                                }
                            </select>
                            <span asp-validation-for="Priority" class="text-danger small"></span>
                        </div>

                        @if (Model.CanAssign && Model.SupportUsers != null)
                        {
                            <div class="col-md-6">
                                <label asp-for="AssignedToId" class="form-label fw-semibold">Assign To</label>
                                <select asp-for="AssignedToId" class="form-select">
                                    <option value="">-- Unassigned --</option>
                                    @foreach (var user in Model.SupportUsers)
                                    {
                                        <option value="@user.Id">@user.FullName (@user.Email)</option>
                                    }
                                </select>
                                <span asp-validation-for="AssignedToId" class="text-danger small"></span>
                            </div>
                        }

                        <div class="col-12">
                            <label class="form-label fw-semibold" for="Attachments">Attachments</label>
                            <div class="form-text mb-1">
                                <i class="fa-solid fa-paperclip me-1"></i>Upload supporting documents (JPG, PNG, PDF up to 10 MB each).
                            </div>
                            <input asp-for="Attachments" type="file" class="form-control" multiple />
                            <span asp-validation-for="Attachments" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mt-5 pt-3 border-top">
                        <div class="text-secondary small">
                            <i class="fa-regular fa-clock me-1"></i>Ticket will be logged immediately after submission.
                        </div>
                        <div class="d-flex gap-2">
                            @if (User.IsInRole("Admin") || User.IsInRole("Support"))
                            {
                                <a asp-action="MyTasks" class="btn btn-outline-secondary">Cancel</a>
                            }
                            else
                            {
                                <a asp-action="MyTickets" class="btn btn-outline-secondary">Cancel</a>
                            }
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fa-solid fa-paper-plane me-2"></i>Submit Ticket
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

