<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITHelpDesk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-0bRqhY6s6+zGtGm5xYgvzmvla12g5L7Z9Bd6Iw2QGXibjHTfrfc03HnvoHxk3FjSFO0DNgSN03lmZ8xZ1AN2Xg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ITHelpDesk.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ITHelpDesk</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                        <i class="fa-solid fa-house me-1"></i>Home
                                    </a>
                                </li>
                                @if (User.Identity?.IsAuthenticated ?? false)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Tickets" asp-action="SelectRequestType">
                                            <i class="fa-solid fa-plus me-1"></i>Submit Ticket
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Tickets" asp-action="MyTickets">
                                            <i class="fa-solid fa-user-check me-1"></i>My Tickets
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Manager") || User.IsInRole("Security"))
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-controller="Tickets" asp-action="TeamRequests">
                                                <i class="fa-solid fa-users me-1"></i>Team Requests
                                            </a>
                                        </li>
                                    }
                                    @if (User.IsInRole("Security") || User.IsInRole("IT"))
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-controller="Tickets" asp-action="MyTasks">
                                                <i class="fa-solid fa-tasks me-1"></i>Tasks
                                            </a>
                                        </li>
                                    }
                                    @if (User.IsInRole("Admin") || User.IsInRole("Support"))
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-controller="Tickets" asp-action="MyTasks">
                                                <i class="fa-solid fa-tasks me-1"></i>Tasks
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Tickets" asp-action="Index">
                                                <i class="fa-solid fa-list-check me-1"></i>All Tickets
                                            </a>
                                        </li>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">
                                                    <i class="fa-solid fa-user-gear me-1"></i>Admin Panel
                                                </a>
                                            </li>
                                        }
                                    }
                                }
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                        <i class="fa-solid fa-shield-halved me-1"></i>Privacy
                                    </a>
                                </li>
                            </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ITHelpDesk - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Html.PartialAsync("_Toast")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
