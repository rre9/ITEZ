@model ITHelpDesk.ViewModels.SystemChangeRequestCreateViewModel
@using ITHelpDesk.Models

@{
    ViewData["Title"] = "Create System Change Request";
}

<div class="row justify-content-center">
    <div class="col-12 col-xl-10 col-xxl-9">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4 p-lg-5">
                @* <h1 class="h4 mb-3">Submit System Change Request</h1> *@
                <div
                    class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
                    <div>
                        <h1 class="h3 fw-semibold text-primary mb-1">
                            <i class="fa-solid fa-key me-2"></i>System Change Request
                        </h1>
                        <p class="text-secondary mb-0">Submit a request for system or application access.</p>
                    </div>
                    <a asp-action="SelectRequestType" class="btn btn-outline-secondary">
                        <i class="fa-solid fa-arrow-left-long me-2"></i>Back to Request Types
                    </a>
                </div>
                <form asp-controller="SystemChangeRequests" asp-action="Create" method="post"
                    enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    @* Validation summary *@
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    @* <h5>Applicant</h5> *@
                    <div class="mb-5">
                        <h5 class="fw-semibold text-dark mb-3 pb-2 border-bottom">
                            <i class="fa-solid fa-user me-2 text-primary"></i>Applicant Information
                        </h5>

                        <form action=""></form>
                        <div class="row g-4">
                            <div class="row g-3 mb-3">

                                <div class="col-md-6">
                                    <label asp-for="RequesterName" class="form-label fw-semibold"></label>
                                    <input asp-for="RequesterName" class="form-control" required />
                                    <span asp-validation-for="RequesterName" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="ChangeRequestNumber" class="form-label fw-semibold"></label>
                                    <input asp-for="ChangeRequestNumber" class="form-control" required />
                                    <span asp-validation-for="ChangeRequestNumber" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Title" class="form-label fw-semibold"></label>
                                    <input asp-for="Title" class="form-control" required />
                                    <span asp-validation-for="Title" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                                    <input asp-for="PhoneNumber" class="form-control" type="tel" inputmode="numeric"
                                        pattern="^05[0-9]{8}$" maxlength="10" placeholder="05xxxxxxxx"
                                        autocomplete="tel" required />

                                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                </div>


                                <div class="col-12">
                                    <label asp-for="ChangeDescription" class="form-label fw-semibold"></label>
                                    <textarea asp-for="ChangeDescription" class="form-control" rows="4"
                                        placeholder="Explain why you need this access and how it relates to your job responsibilities..."
                                        required></textarea>
                                    <span asp-validation-for="ChangeDescription" class="text-danger small"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="ChangeReason" class="form-label fw-semibold"></label>
                                    <textarea asp-for="ChangeReason" class="form-control" rows="4"
                                        placeholder="Explain the reason for this change..." required></textarea>
                                    <span asp-validation-for="ChangeReason" class="text-danger small"></span>
                                </div>
                            </div>

                            <hr />
                            <h5>Impact Assessment</h5>
                            <div class="row g-3 mb-3">
                                <div class="col-md-4">
                                    <label asp-for="ChangeType" class="form-label">Change Type</label>
                                    <select asp-for="ChangeType" class="form-select" required>
                                        <option value="">-- Select Change Type --</option>
                                        <option value="1">تغيير علا التطبيقات</option>
                                        <option value="2">تغيير على المكونات الماديه</option>
                                        <option value="3">تغيير شبكي</option>
                                        <option value="4">تغيير على انظمة التشغيل</option>
                                    </select>
                                    <span asp-validation-for="ChangeType" class="text-danger small"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="ChangePriority" class="form-label">Priority</label>
                                    <select asp-for="ChangePriority" class="form-select" required>
                                        <option value="">-- Select Priority --</option>
                                        <option value="1">طارئ</option>
                                        <option value="2">عالي</option>
                                        <option value="3">متوسط</option>
                                        <option value="4">منخفض</option>
                                        <option value="5">تغيير على قواعد البيانات</option>
                                        <option value="6">تغيير في الاجراءات</option>
                                        <option value="7">تغيير في امن المعلومات</option>
                                        <option value="8">تغييرات اخرى</option>
                                    </select>
                                    <span asp-validation-for="ChangePriority" class="text-danger small"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="ChangeImpact" class="form-label">Impact</label>
                                    <select asp-for="ChangeImpact" class="form-select" required>
                                        <option value="">-- Select Impact --</option>
                                        <option value="1">منخفض</option>
                                        <option value="2">متوسط</option>
                                        <option value="3">عالي</option>
                                    </select>
                                    <span asp-validation-for="ChangeImpact" class="text-danger small"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="AffectedAssets" class="form-label">Affected Assets</label>
                                    <textarea asp-for="AffectedAssets" class="form-control" rows="3"
                                        required></textarea>
                                    <span asp-validation-for="AffectedAssets" class="text-danger small"></span>
                                </div>
                            </div>

                            <hr />
                            <h5>Execution Plans</h5>
                            <div class="mb-3">
                                <label asp-for="ImplementationPlan" class="form-label">Implementation Plan</label>
                                <textarea asp-for="ImplementationPlan" class="form-control" rows="5"
                                    required></textarea>
                                <span asp-validation-for="ImplementationPlan" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="BackoutPlan" class="form-label">Backout Plan</label>
                                <textarea asp-for="BackoutPlan" class="form-control" rows="4" required></textarea>
                                <span asp-validation-for="BackoutPlan" class="text-danger small"></span>
                            </div>

                            <hr />
                            <h5>Implementer</h5>
                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    <label asp-for="ImplementerName" class="form-label">Implementer Name</label>
                                    <input asp-for="ImplementerName" class="form-control" required />
                                    <span asp-validation-for="ImplementerName" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ExecutionDate" class="form-label">Execution Date</label>
                                    <input asp-for="ExecutionDate" class="form-control" type="date" required />
                                    <span asp-validation-for="ExecutionDate" class="text-danger small"></span>
                                </div>
                            </div>

                            @* <hr /> *@
                            <div class="d-flex justify-content-end">
                                <a asp-controller="Tickets" asp-action="SelectRequestType"
                                    class="btn btn-outline-secondary me-2">Cancel</a>
                                <button type="submit" class="btn btn-primary">Submit Request</button>
                            </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Basic form validation
        (function () {
            'use strict';
            const form = document.querySelector('.needs-validation');
            if (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            }
        })();

        // Validate end date is after start date
        const startDate = document.getElementById('AccessStartDate');
        const endDate = document.getElementById('AccessEndDate');

        if (startDate && endDate) {
            startDate.addEventListener('change', function () {
                if (endDate.value && new Date(endDate.value) <= new Date(startDate.value)) {
                    endDate.setCustomValidity('End date must be after start date');
                } else {
                    endDate.setCustomValidity('');
                }
            });

            endDate.addEventListener('change', function () {
                if (startDate.value && new Date(endDate.value) <= new Date(startDate.value)) {
                    endDate.setCustomValidity('End date must be after start date');
                } else {
                    endDate.setCustomValidity('');
                }
            });
        }
    </script>
}