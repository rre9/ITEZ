@model EmployeeDashboardViewModel
@using ITHelpDesk.Models

@{
    ViewData["Title"] = Localizer["MyAccessRequests"];

    string GetRequestStatus(AccessRequest accessRequest)
    {
        var ticket = accessRequest.Ticket;
        if (ticket == null) return "Unknown";
        
        if (accessRequest.ManagerApprovalStatus == ApprovalStatus.Rejected ||
            accessRequest.SecurityApprovalStatus == ApprovalStatus.Rejected ||
            ticket.Status == TicketStatus.Rejected)
        {
            return "Rejected";
        }
        
        if (ticket.Status == TicketStatus.Resolved)
        {
            return "Completed";
        }
        
        if (accessRequest.SecurityApprovalStatus == ApprovalStatus.Approved &&
            ticket.Status == TicketStatus.InProgress)
        {
            return "Approved";
        }
        
        return "Pending";
    }

    string GetStatusBadgeClass(string status) => status switch
    {
        "Pending" => "bg-warning text-dark",
        "Approved" => "bg-info text-dark",
        "Rejected" => "bg-danger",
        "Completed" => "bg-success",
        _ => "bg-secondary"
    };
}

<div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3 mb-4">
    <div>
        <h1 class="display-6 fw-semibold text-primary mb-1">
            <i class="fa-solid fa-user-check me-2"></i>@Localizer["MyAccessRequests"]
        </h1>
        <p class="text-secondary mb-0">@Localizer["MyAccessRequestsDescription"]</p>
    </div>
    <a asp-controller="Tickets" asp-action="SelectRequestType" class="btn btn-primary btn-lg shadow-sm">
        <i class="fa-solid fa-plus me-2"></i>@Localizer["SubmitNewTicket"]
    </a>
</div>

<!-- Status Filter -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="d-flex gap-2 align-items-center flex-wrap">
            <label for="status" class="form-label mb-0 fw-semibold">@Localizer["FilterByStatus"]</label>
            <select name="status" id="status" class="form-select" style="width: auto;" onchange="this.form.submit()">
                <option value="All" selected="@(Model.SelectedStatus == "All")">@Localizer["All"]</option>
                <option value="Pending" selected="@(Model.SelectedStatus == "Pending")">@Localizer["Pending"]</option>
                <option value="Approved" selected="@(Model.SelectedStatus == "Approved")">@Localizer["Approved"]</option>
                <option value="Rejected" selected="@(Model.SelectedStatus == "Rejected")">@Localizer["Rejected"]</option>
                <option value="Completed" selected="@(Model.SelectedStatus == "Completed")">@Localizer["Completed"]</option>
            </select>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">@Localizer["TicketNumber"]</th>
                        <th scope="col">@Localizer["RequestType"]</th>
                        <th scope="col">@Localizer["SystemName"]</th>
                        <th scope="col">@Localizer["Status"]</th>
                        <th scope="col" class="text-nowrap">@Localizer["LastUpdated"]</th>
                        <th scope="col" class="text-nowrap text-end">@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.AccessRequests.Any())
                    {
                        <tr>
                            <td colspan="6" class="py-5 text-center text-secondary">
                                <i class="fa-solid fa-inbox fa-3x mb-3 text-muted"></i>
                                <div class="fw-semibold">@Localizer["NoAccessRequestsFound"]</div>
                                <p class="mb-3">@Localizer["NoTicketsFoundDescription"]</p>
                                <a asp-controller="Tickets" asp-action="SelectRequestType" class="btn btn-outline-primary">
                                    <i class="fa-solid fa-plus me-2"></i>@Localizer["AccessRequest"]
                                </a>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var accessRequest in Model.AccessRequests)
                        {
                            var ticket = accessRequest.Ticket;
                            if (ticket == null) continue;
                            
                            var ticketNumber = $"HD-{ticket.Id:D6}";
                            var requestStatus = GetRequestStatus(accessRequest);
                            var lastUpdated = ticket.Logs?.OrderByDescending(l => l.Timestamp).FirstOrDefault()?.Timestamp ?? ticket.CreatedAt;
                            
                            <tr>
                                <td class="fw-semibold text-secondary">@ticketNumber</td>
                                <td>@Localizer["AccessRequest"]</td>
                                <td>@accessRequest.SystemName</td>
                                <td>
                                    <span class="badge rounded-pill @GetStatusBadgeClass(requestStatus)">@Localizer[requestStatus]</span>
                                </td>
                                <td>@lastUpdated.ToLocalTime().ToString("g", System.Globalization.CultureInfo.CurrentUICulture)</td>
                                <td class="text-nowrap text-end">
                                    <a class="btn btn-primary btn-sm" asp-controller="Tickets" asp-action="Details" asp-route-id="@ticket.Id">
                                        <i class="fa-solid fa-eye me-1"></i>@Localizer["ViewDetails"]
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

