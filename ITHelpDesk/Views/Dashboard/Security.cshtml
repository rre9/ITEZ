@model SecurityDashboardViewModel
@using ITHelpDesk.Models

@{
    ViewData["Title"] = "Security Dashboard";
}

<div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3 mb-4">
    <div>
        <h1 class="display-6 fw-semibold text-primary mb-1">
            <i class="fa-solid fa-shield-halved me-2"></i>Security Dashboard
        </h1>
        <p class="text-secondary mb-0">Review access requests approved by managers. Review pending requests or view previously reviewed requests.</p>
    </div>
    @{
        var pendingCount = Model.PendingRequests.Count(ar => ar.SecurityApprovalStatus == ApprovalStatus.Pending);
    }
    @if (pendingCount > 0)
    {
        <span class="badge bg-warning text-dark fs-6 px-3 py-2">
            <i class="fa-solid fa-exclamation-circle me-2"></i>@pendingCount Pending
        </span>
    }
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Ticket #</th>
                        <th scope="col">Employee Name</th>
                        <th scope="col">Manager Name</th>
                        <th scope="col">System Name</th>
                        <th scope="col">Security Status</th>
                        <th scope="col" class="text-nowrap text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.PendingRequests.Any())
                    {
                        <tr>
                            <td colspan="6" class="py-5 text-center text-secondary">
                                <i class="fa-solid fa-inbox fa-3x mb-3 text-muted"></i>
                                <div class="fw-semibold">No access requests found</div>
                                <p class="mb-0">Access requests approved by managers will appear here.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var request in Model.PendingRequests)
                        {
                            var ticketNumber = $"HD-{request.TicketId:D6}";
                            var isPending = request.SecurityApprovalStatus == ApprovalStatus.Pending;
                            var statusBadgeClass = request.SecurityApprovalStatus switch
                            {
                                ApprovalStatus.Pending => "bg-warning text-dark",
                                ApprovalStatus.Approved => "bg-success",
                                ApprovalStatus.Rejected => "bg-danger",
                                _ => "bg-secondary"
                            };
                            
                            <tr>
                                <td class="fw-semibold text-secondary">@ticketNumber</td>
                                <td>@request.FullName</td>
                                <td>@(request.SelectedManager?.FullName ?? "Unknown")</td>
                                <td>@request.SystemName</td>
                                <td>
                                    <span class="badge rounded-pill @statusBadgeClass">
                                        @request.SecurityApprovalStatus
                                    </span>
                                </td>
                                <td class="text-nowrap text-end">
                                    @if (isPending)
                                    {
                                        <a class="btn btn-primary btn-sm" asp-controller="Tickets" asp-action="ApproveSecurityAccess" asp-route-id="@request.TicketId">
                                            <i class="fa-solid fa-shield-halved me-1"></i>Review
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-outline-primary btn-sm" asp-controller="Tickets" asp-action="Details" asp-route-id="@request.TicketId">
                                            <i class="fa-solid fa-eye me-1"></i>View
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

