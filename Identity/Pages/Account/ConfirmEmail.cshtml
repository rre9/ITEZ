@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Email confirmed";
}

<div class="row justify-content-center">
    <div class="col-12 col-lg-8 col-xl-5">
        <div class="card border-0 shadow-sm mt-5">
            <div class="card-body p-4 p-lg-5 text-center">
                <i class="fa-solid fa-circle-check fa-3x text-success mb-3"></i>
                <h1 class="h3 fw-semibold text-primary mb-2">Email confirmed</h1>
                <p class="text-secondary mb-4">Thank you for verifying your corporate email address. You can now sign in and access the IT Help Desk.</p>
                <a asp-page="./Login" class="btn btn-primary">Go to Sign in</a>
            </div>
        </div>
    </div>
</div>
