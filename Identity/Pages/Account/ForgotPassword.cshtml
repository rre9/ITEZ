@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot password";
}

<div class="row justify-content-center">
    <div class="col-12 col-lg-8 col-xl-5">
        <div class="card border-0 shadow-sm mt-5">
            <div class="card-body p-4 p-lg-5">
                <div class="text-center mb-4">
                    <h1 class="h3 fw-semibold text-primary mb-1"><i class="fa-solid fa-key me-2"></i>Reset your password</h1>
                    <p class="text-secondary mb-0">Enter your corporate email to receive a password reset link.</p>
                </div>

                @if (TempData["Toast"] is string toastMessage)
                {
                    <div class="alert alert-info mb-4">
                        @Html.Raw(toastMessage)
                    </div>
                }

                @if (TempData["ResetLink"] is string resetLink)
                {
                    <div class="alert alert-warning mb-4">
                        <strong>Development Mode:</strong> Password reset link (for testing):
                        <br />
                        <a href="@resetLink" target="_blank" class="text-break text-decoration-underline">@resetLink</a>
                    </div>
                }

                <form method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="Input.Email" class="form-label fw-semibold"></label>
                        <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2">Send reset link</button>
                </form>

                <div class="text-center mt-4">
                    <a asp-page="./Login" class="text-decoration-none text-secondary">Back to sign in</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
